<assembly>
	<id>integration</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>../base/doc</directory>
			<outputDirectory>doc</outputDirectory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<includes>
				<include>*.doc</include>
			</includes>
			<excludes>
				<exclude>~*.doc</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>../ejb/src/main/resources</directory>
			<outputDirectory>config</outputDirectory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<includes>
				<include>log4j.xml</include>
				<include>log4j.dtd</include>
			</includes>
			<excludes>
				<exclude>uintf-ejb*</exclude>
			</excludes>			
		</fileSet>
		<fileSet>
			<directory>../base/config</directory>
			<outputDirectory>config</outputDirectory>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
		<fileSet>
			<directory>../ear/target</directory>
			<includes>
				<include>*.ear</include>
			</includes>
			<outputDirectory>deployment</outputDirectory>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
	</fileSets>
</assembly>