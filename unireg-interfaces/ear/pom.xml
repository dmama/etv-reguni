<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<!-- POM pour Unireg Interfaces EAR -->
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>ch.vd.uniregctb</groupId>
		<artifactId>unireg-interfaces</artifactId>
		<!-- BEGIN_LVERSION -->
		<version>2.2.4</version>
		<!-- END_LVERSION -->
		<relativePath>../base/pom.xml</relativePath>
	</parent>

	<groupId>${pom.parent.groupId}</groupId>
	<artifactId>unireg-interfaces-ear</artifactId>
	<version>${pom.parent.version}</version>
	<name>Unireg interfaces - EAR</name>
	<description>unireg interfaces - interfaces sur Unireg</description>
	<url>http://www.vd.ch</url>
	<packaging>ear</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<earSourceDirectory>src/main/java</earSourceDirectory>
					<finalName>unireg-interfaces-ear-${version}</finalName>
					<displayName>unireg-interfaces-${version}</displayName>
					<defaultJavaBundleDir>lib/</defaultJavaBundleDir>					
					<modules>
					<!-- A decommenter pour ddÃ©clarer la partie web					
						<webModule>
							<groupId>${pom.parent.groupId}</groupId>
							<artifactId>host-interfaces-services</artifactId>
							<contextRoot>/interfaces-services-${short.version}</contextRoot>
						</webModule>
						 --> 
					</modules>					
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>assembly</goal>
						</goals>
						<configuration>
							<finalName>unireg_interfaces</finalName>
							<descriptors>
								<descriptor>../base/integration.xml</descriptor>
								<descriptor>../base/developpers.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<tstamp>
									<format property="rightNow" pattern="yyyy-MM-dd_HH-mm" locale="ch"/>
								</tstamp>
								<copy file="target/unireg_interfaces-integration.zip" tofile="../base/target/unireg_interfaces_server-V${version}_${rightNow}.zip"/>
								<!--  <delete file="target/unireg_interfaces-integration.zip"/>-->
								<copy file="target/unireg_interfaces-developpers.zip" tofile="../base/target/unireg_interfaces_client-V${version}_${rightNow}.zip"/>
								<!-- <delete file="target/unireg_interfaces-developpers.zip"/> -->
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>${pom.parent.groupId}</groupId>
			<artifactId>unireg-interfaces-ejb</artifactId>
			<version>${pom.parent.version}</version>
			<type>ejb</type>
		</dependency>		
		<!--		
		 <dependency>
			<groupId>${pom.parent.groupId}</groupId>
			<artifactId>unireg-interfaces-web</artifactId>
			<version>${pom.parent.version}</version>
			<type>war</type>
		</dependency> -->		
	</dependencies>
</project>
