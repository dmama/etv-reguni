<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	 <bean id="migrator" class="ch.vd.uniregctb.interfaces.migreg.Migrator">
	<property name="globalTiersIndexer" ref="globalTiersIndexer" />
	<property name="db2Schema" ref="db2Schema" />
	<property name="hostMigrationManager" ref="hostMigrationManager" />
	<property name="transactionManager" ref="transactionManager" />
	</bean>	
	
		<!-- File based -->
	<bean id="fileGlobalIndexDirectory" class="ch.vd.uniregctb.indexer.jdbc.FSDirectoryProvider" lazy-init="true">
		<constructor-arg value="${local.indexer.globalIndexPath}" />
	</bean>
</beans>
