<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="DEBUG" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[perfEjbCLient] %-5p [%d{yyyy-MM-dd HH:mm:ss.SSS}] %c{1}.%M(%L) | %m%n" />
		</layout>
	</appender>
	
	<appender name="LOGFILE" class="org.apache.log4j.FileAppender">
	<param name="Threshold" value="DEBUG" />		
		<param name="Append" value="false" />
		<param name="File" value="ejbCLient.log"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[perfEjbCLient] %-5p [%d{yyyy-MM-dd HH:mm:ss.SSS}] %c{1}.%M(%L) | %m%n" />
		</layout>		
	</appender>
	<appender name="PERFSFILE" class="org.apache.log4j.FileAppender">		
		<param name="Append" value="false" />
		<param name="File" value="perfEjbCLient.log"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[perfEjbCLient] %-5p [%d{yyyy-MM-dd HH:mm:ss.SSS}] %c{1}.%M(%L) | %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelMatchFilter">
			<param name="levelToMatch" value="TRACE" />
		</filter>
		<filter class="org.apache.log4j.varia.DenyAllFilter" />	
	</appender>


    <logger name="ch.vd.uniregctb.client">
        <level value="DEBUG"/>       
    </logger>
     <logger name="ch.vd.uniregctb.client.EjbClient">
        <level value="TRACE"/>
        <appender-ref ref="PERFSFILE"/>
    </logger>


    <logger name="org.apache">
        <level value="WARN"/>
    </logger>

    <logger name="org.hibernate">
        <level value="WARN"/>
    </logger>

    <!--logger name="org.hibernate.SQL">
        <level value="DEBUG"/>
    </logger-->

    <logger name="org.springframework">
        <level value="WARN"/>
    </logger>

    <!-- Suppress warnings from Commons Validator -->
    <logger name="org.apache.commons.validator.ValidatorResources">
        <level value="ERROR"/>
    </logger>


    <root>
        <level value="DEBUG"/>
		<appender-ref ref="LOGFILE" />
		<appender-ref ref="CONSOLE" />
    </root>

</log4j:configuration>
