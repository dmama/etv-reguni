<?xml version="1.0" encoding="UTF-8"?>
<project>

	<!-- POM for Host interfaces Tests d'integration -->
	<modelVersion>4.0.0</modelVersion>

	<groupId>${pom.parent.groupId}</groupId>
	<artifactId>unireg-interfaces-ejb-it</artifactId>
	<version>${pom.parent.version}</version>
	<name>Unireg interfaces - EJB-IT</name>
	<description>unireg interfaces - interfaces sur Unireg</description>
	<url>http://www.vd.ch</url>

	<parent>
		<groupId>ch.vd.uniregctb</groupId>
		<artifactId>unireg-interfaces</artifactId>
		<!-- BEGIN_LVERSION -->
		<version>2.2.0</version>
		<!-- END_LVERSION -->
		<relativePath>../base/pom.xml</relativePath>
	</parent>
	<dependencies>
		<dependency>
			<groupId>${pom.parent.groupId}</groupId>
			<artifactId>unireg-interfaces-ejb</artifactId>
			<version>${pom.parent.version}</version>
			<type>ejb-client</type>			
		</dependency>
		<dependency>
			<groupId>ch.vd.uniregctb</groupId>
			<artifactId>uniregctb-wlw</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>ch.vd.uniregctb</groupId>
			<artifactId>uniregctb-testing</artifactId>
			<version>2.7.5</version>			
		</dependency>
		<dependency>
			<groupId>ch.vd.host-interfaces</groupId>
			<artifactId>host-interfaces-client</artifactId>
			<version>${host-interfaces.version-long}</version>
		</dependency>
		<dependency>
			<groupId>com.ibm.db2</groupId>
			<artifactId>db2jcc</artifactId>
			<version>9.5-3.50.152</version>
		</dependency>
		<dependency>
			<groupId>com.ibm.db2</groupId>
			<artifactId>db2jcc_license_cisuz</artifactId>
			<version>9.5-3.50.152</version>
		</dependency>
		<dependency>
			<groupId>weblogic</groupId>
			<artifactId>weblogic</artifactId>
			<version>9.2mp2</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.4</version>
		</dependency>
		<dependency>
			<groupId>com.ibm.db2</groupId>
			<artifactId>db2-driver-client</artifactId>
			<version>7.1</version>
		</dependency>
		<dependency>
			<groupId>com.thoughtworks.xstream</groupId>
			<artifactId>xstream</artifactId>
			<version>1.3.1</version>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>1.4</version>
		</dependency>
		<dependency>
			<groupId>commons-cli</groupId>
			<artifactId>commons-cli</artifactId>
			<version>1.0</version>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
			<resource>
				<directory>
					${basedir}/target/generated-resources
				</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.0</version>
				<executions>
					<execution>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<phase>install</phase>
					</execution>
				</executions>
				<configuration>
					<outputDirectory>
						${project.build.directory}/lib
					</outputDirectory>
					<overWrite>true</overWrite>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<finalName>perfstestEjb</finalName>
					<descriptors>
						<descriptor>release.xml</descriptor>
					</descriptors>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
		<unireg-interfaces.factory>
			weblogic.jndi.WLInitialContextFactory
		</unireg-interfaces.factory>
		<!-- <unireg-interfaces.factory>
			weblogic.jndi.Environment.DEFAULT_INITIAL_CONTEXT_FACTORY
		</unireg-interfaces.factory> -->
		
		<unireg-interfaces.ejb-proxy-class>
			weblogic.workaround.WeblogicCustomSimpleRemoteStatelessSessionProxyFactoryBean
		</unireg-interfaces.ejb-proxy-class>
		<unireg-interfaces.serverurl>
		<!--t3://solve61v.etat-de-vaud.ch:63222 -->
		t3://localhost:7001		 
		 <!-- t3://10.240.5.131:7001 -->		
		</unireg-interfaces.serverurl>		
		<unireg-interfaces.username>web-interfaces-ignoreI107-user</unireg-interfaces.username>
		<unireg-interfaces.password>web-interfaces-ignoreI107-pwd</unireg-interfaces.password>
		<host-interfaces.serverurl>
					t3://solve61v.etat-de-vaud.ch:63222
		</host-interfaces.serverurl>
		<host-interfaces.username></host-interfaces.username>
		<host-interfaces.password></host-interfaces.password>
		<local.indexer.globalIndexPath>
		
		</local.indexer.globalIndexPath>
	</properties>

</project>
