<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Bean remoteJndiConnection for Host-Interfaces EJBs -->
	<bean id="ejbJndiTemplate" class="ch.vd.uniregctb.utils.UniregJndiTemplate">
		<property name="environment">
			<map>
				<entry key="java.naming.factory.initial" value="${host-interfaces.factory}" />
				<entry key="java.naming.provider.url" value="${extprop.host-interfaces.url}"/>
				<entry key="java.naming.security.principal" value="${extprop.host-interfaces.username}" />
				<entry key="java.naming.security.credentials" value="${extprop.host-interfaces.password}" />
			</map>
		</property>
	</bean>
	<!-- Bean client serviceCivil -->
	<bean name="_serviceCivil" class="${host-interfaces.ejb-proxy-class}">
		<property name="jndiName" value="ejb/ch.vd.registre.civil.service.ServiceCivil-${host-interfaces.version-short}"/>
		<property name="resourceRef" value="false"/>
		<property name="lookupHomeOnStartup" value="false"/>
		<property name="businessInterface" value="ch.vd.registre.civil.service.ServiceCivil"/>
		<property name="jndiTemplate" ref="ejbJndiTemplate"/>
	</bean>
	<bean name="_serviceFiscal" class="org.springframework.ejb.access.SimpleRemoteStatelessSessionProxyFactoryBean">
		<property name="jndiName" value="ejb/ch.vd.uniregctb.fiscal.service.ServiceFiscal"/>
		<property name="resourceRef" value="false"/>
		<property name="lookupHomeOnStartup" value="false"/>
		<property name="businessInterface" value="ch.vd.uniregctb.fiscal.service.ServiceFiscal"/>
		<property name="jndiTemplate" ref="ejbJndiTemplate"/>
	</bean>
</beans>
