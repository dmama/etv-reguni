<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">
	
	<!-- Database events -->
	<bean id="databaseEventSender" class="ch.vd.uniregctb.evenement.database.DatabaseEventSender">
		<property name="esbTemplate" ref="esbTemplate" />
		<property name="databaseService" ref="databaseService" />
		<property name="serviceDestination" value="${extprop.jms.queue.db.event.serviceDestination}" />
		<property name="businessUser" value="unireg-interfaces" />
	</bean>

	<!-- Config JMS -->
	<bean id="jmsConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
		<property name="brokerURL" value="${extprop.jms.esb.url}" />
		<property name="userName" value="${extprop.jms.esb.username}" />
		<property name="password" value="${extprop.jms.esb.password}" />
	</bean>

	<bean id="esbTemplate" class="ch.vd.technical.esb.spring.EsbTemplate" lazy-init="true">
		<property name="connectionFactory" ref="jmsConnectionFactory" />
		<property name="esbStore" ref="raftEsbStore" />
		<property name="defaultDestinationName" value="esb" />
		<property name="receiveTimeout" value="1000" />
	</bean>

	<bean id="raftEsbStore" class="ch.vd.technical.esb.store.raft.RaftEsbStore">
		<property name="endpoint" value="${extprop.jms.esb.raft.store}" />
	</bean>
	
</beans>
