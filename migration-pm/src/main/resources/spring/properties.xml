<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="propertyConfigurer" class="ch.vd.uniregctb.migration.pm.utils.PreferencesPlaceholderConfigurer">
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		<property name="ignoreResourceNotFound" value="false" />
		<property name="ignoreUnresolvablePlaceholders" value="false" />
		<property name="fileEncoding" value="UTF-8"/>
		<property name="locationFileProps">
			<list>
				<!-- le nom des variables 'système' qui contiennent les chemins des fichiers à charger -->
				<value>ch.vd.unireg.migration.pm.conf</value>
			</list>
		</property>
	</bean>

</beans>
