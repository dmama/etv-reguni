	<!--<encoder>-->
	<!--<pattern>[migration] %-5level [%d{yyyy-MM-dd HH:mm:ss.SSS}] [%8.8thread] %msg%n</pattern>-->
	<!--</encoder>-->
	<!--</appender>-->

	<appender name="MAIN" class="ch.qos.logback.core.FileAppender">
		<file>log/migration.log</file>
		<append>true</append>
		<!-- encoders are assigned the type
			 ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
		<encoder>
			<pattern>%-5level [%d{yyyy-MM-dd HH:mm:ss.SSS}] [%8.8thread] %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="PERF" class="ch.qos.logback.core.FileAppender">
		<file>log/perfs.log</file>
		<append>true</append>
		<!-- encoders are assigned the type
			 ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
		<encoder>
			<pattern>%-5p [%d{yyyy-MM-dd HH:mm:ss.SSS}] [%8.8t] %msg%n</pattern>
			<!--<pattern>[perf] %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} | %msg%n</pattern>-->
		</encoder>
	</appender>

	<logger name="ch.vd.uniregctb.migration.pm.utils.TracingFactory" additivity="false">
		<appender-ref ref="PERF"/>
	</logger>

	<logger name="org.hibernate">
		<level value="WARN" />
	</logger>

	<logger name="org.hibernate.SQL">
		<level value="INFO" />
	</logger>

	<root level="info">
		<!--<appender-ref ref="CONSOLE"/>-->
		<appender-ref ref="MAIN" />
	</root>

</configuration>