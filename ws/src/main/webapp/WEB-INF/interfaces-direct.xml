<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

	<!-- Ce fichier permet de configurer les services civils et infrastructure en mode direct, c'est-à-dire sans passer par le cache centralisé Nexus.
	 L'idée est de permettre aux développeurs de travailler en débug sans devoir démarrage deux applications Java. -->

	<!-- Client RcPers -->

	<bean id="rcPersWebClientPool" class="ch.vd.unireg.wsclient.WebClientPool">
		<property name="baseUrl" value="${extprop.webservice.rcpers.url}" />
		<property name="username" value="${extprop.webservice.rcpers.username}" />
		<property name="password" value="${extprop.webservice.rcpers.password}" />
	</bean>

	<bean id="rcPersClientRaw" class="ch.vd.unireg.wsclient.rcpers.RcPersClientImpl">
		<property name="wcPool" ref="rcPersWebClientPool" />
		<property name="peoplePath" value="${extprop.webservice.rcpers.peoplePath}" />
		<property name="peopleByEventIdPath" value="${extprop.webservice.rcpers.peopleByEventIdPath}" />
		<property name="peopleBySocialNumberPath" value="${extprop.webservice.rcpers.peopleBySocialNumberPath}" />
		<property name="eventPath" value="${extprop.webservice.rcpers.eventPath}" />
		<property name="searchPath" value="${extprop.webservice.rcpers.searchPath}" />
		<property name="upiGetInfoPersonPath" value="${extprop.webservice.rcpers.upiGetInfoPersonPath}" />
	</bean>

	<bean id="rcPersClientTracing" class="ch.vd.unireg.wsclient.rcpers.RcPersClientTracing">
		<property name="target" ref="rcPersClientRaw"/>
		<property name="statsService" ref="statsService"/>
	</bean>

	<alias alias="rcPersClient" name="rcPersClientTracing"/>

	<!-- Service civil -->

	<bean id="serviceCivilRcPers" class="ch.vd.unireg.interfaces.civil.rcpers.ServiceCivilRCPers">
		<property name="client" ref="rcPersClient" />
		<property name="infraService" ref="serviceInfrastructureRaw"/>
	</bean>

	<bean id="serviceCivilServiceTracing" class="ch.vd.unireg.interfaces.civil.ServiceCivilTracing">
		<property name="target" ref="serviceCivilRcPers" />
		<property name="statsService" ref="statsService" />
	</bean>

	<!-- Client RCEnt -->

	<bean id="rcEntWebClientPool" class="ch.vd.unireg.wsclient.WebClientPool">
		<property name="baseUrl" value="${extprop.webservice.rcent.url}"/>
		<property name="username" value="${extprop.webservice.rcent.username}"/>
		<property name="password" value="${extprop.webservice.rcent.password}"/>
	</bean>

	<bean id="rcEntClientRaw" class="ch.vd.unireg.wsclient.rcent.RcEntClientImpl">
		<property name="wcPool" ref="rcEntWebClientPool"/>
		<property name="organisationPath" value="/organisation/CT.VD.PARTY"/>
		<property name="organisationsOfNoticePath" value="/organisationsOfNotice"/>
		<property name="pingPath" value="/infrastructure/ping"/>
		<property name="bus" ref="cxf"/>
		<property name="validationEnabled" value="${extprop.webservice.rcent.validate}"/>
		<property name="schemasLocations">
			<util:list>
				<value>eVD-0004-3-0.xsd</value>
				<value>eVD-0022-3-5.xsd</value>
				<value>eVD-0023-3-5.xsd</value>
				<value>eVD-0024-3-5.xsd</value>
			</util:list>
		</property>
	</bean>

	<!-- Adapteur RCEnt -->

	<bean id="organisationHistorizer" class="ch.vd.unireg.interfaces.organisation.rcent.adapter.historizer.OrganisationHistorizer"/>

	<bean id="rcEntAdapter" class="ch.vd.unireg.interfaces.organisation.rcent.adapter.service.RCEntAdapter">
		<constructor-arg ref="rcEntClientRaw"/>
		<constructor-arg ref="organisationHistorizer"/>
	</bean>

	<!-- Service Entreprise -->

	<bean id="serviceEntrepriseRCEnt" class="ch.vd.unireg.interfaces.organisation.rcent.ServiceEntrepriseRCEnt">
		<constructor-arg ref="rcEntAdapter"/>
		<constructor-arg ref="rcEntClientRaw"/>
		<constructor-arg ref="serviceInfrastructureRaw"/>
	</bean>

	<bean id="serviceEntrepriseTracing" class="ch.vd.unireg.interfaces.organisation.ServiceEntrepriseTracing">
		<property name="target" ref="serviceEntrepriseRCEnt" />
		<property name="statsService" ref="statsService" />
	</bean>

	<!-- Client fidor -->

	<bean id="fidorWebClientPool" class="ch.vd.unireg.wsclient.WebClientPool">
		<property name="baseUrl" value="${extprop.webservice.fidor.url}" />
		<property name="username" value="${extprop.webservice.fidor.username}" />
		<property name="password" value="${extprop.webservice.fidor.password}" />
	</bean>

	<bean id="fidorClientRaw" class="ch.vd.unireg.webservice.fidor.v5.FidorClientImpl">
		<property name="wcPool" ref="fidorWebClientPool"/>
	</bean>

	<bean id="fidorClientTracing" class="ch.vd.unireg.wsclient.fidor.FidorClientTracing">
		<property name="statsService" ref="statsService"/>
		<property name="target" ref="fidorClientRaw"/>
	</bean>

	<alias name="fidorClientTracing" alias="fidorClient"/>


	<!-- Service infra -->

	<bean id="serviceInfrastructureServiceHostRest" class="ch.vd.unireg.interfaces.infra.host.ServiceInfrastructureHostInterfacesRest">
		<property name="client" ref="serviceInfrastructureClient" />
	</bean>

	<bean id="serviceInfrastructureFidor" class="ch.vd.unireg.interfaces.infra.fidor.ServiceInfrastructureFidor">
		<property name="fidorClient" ref="fidorClient" />
		<property name="uniregCacheManager" ref="uniregCacheManager" />
	</bean>

	<bean id="serviceInfrastructureMarshaller" class="ch.vd.unireg.interfaces.infra.ServiceInfrastructureMarshaller">
		<property name="hostService" ref="serviceInfrastructureServiceHostRest" />
		<property name="fidorService" ref="serviceInfrastructureFidor" />
	</bean>

	<bean id="serviceInfrastructureTracing" class="ch.vd.unireg.interfaces.infra.ServiceInfrastructureTracing">
		<property name="target" ref="serviceInfrastructureMarshaller" />
		<property name="statsService" ref="statsService" />
	</bean>

	<bean id="hostIntWebClientPool" class="ch.vd.unireg.wsclient.WebClientPool">
		<property name="baseUrl" value="${extprop.host-interfaces.webservice.url}/infrastructure" />
		<property name="username" value="${extprop.host-interfaces.webservice.username}" />
		<property name="password" value="${extprop.host-interfaces.webservice.password}" />
	</bean>

	<bean id="serviceInfrastructureClientRaw" class="ch.vd.unireg.wsclient.host.interfaces.ServiceInfrastructureClientImpl">
		<property name="wcPool" ref="hostIntWebClientPool" />
	</bean>

	<bean id="serviceInfrastructureClientTracing" class="ch.vd.unireg.wsclient.host.ServiceInfrastructureClientTracing">
		<property name="statsService" ref="statsService"/>
		<property name="target" ref="serviceInfrastructureClientRaw"/>
	</bean>

	<alias name="serviceInfrastructureClientTracing" alias="serviceInfrastructureClient"/>

</beans>
