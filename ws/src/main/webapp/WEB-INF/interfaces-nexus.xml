<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Exécuteur HTTP pour tous les appels spring-remoting de WS vers Nexus -->
	<bean id="nexusHttpRequestExecutor" class="ch.vd.unireg.servlet.remoting.UniregHttpInvokerRequestExecutorFactory">
		<property name="serviceName" value="nexus"/>
		<property name="username" value="${extprop.remoting.unireg.nexus.username}" />
		<property name="password" value="${extprop.remoting.unireg.nexus.password}" />
		<property name="maxConnectionsPerRoute" value="${extprop.remoting.unireg.nexus.maxConnectionsPerHost}" />
		<property name="maxTotalConnections" value="${extprop.remoting.unireg.nexus.maxTotalConnections}" />
		<property name="braveHttpTracing" ref="braveHttpTracing"/>
		<property name="preAuthHosts">
			<list>
				<!-- active la pré-authentication pour améliorer les performances (= envoi immédiat
					 du username/password plutôt que d'attendre une réponse HTTP 401 du serveur pour le faire) -->
				<value>${extprop.remoting.unireg.nexus.host}</value>
			</list>
		</property>
	</bean>

	<!-- Service civil -->

	<bean id="serviceCivilRemote" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/serviceCivil.remoting" />
		<property name="serviceInterface" value="ch.vd.unireg.interfaces.civil.ServiceCivilRaw" />
		<property name="executor" ref="nexusHttpRequestExecutor" />
	</bean>

	<bean id="serviceCivilServiceTracing" class="ch.vd.unireg.interfaces.civil.ServiceCivilTracing">
		<property name="target" ref="serviceCivilRemote" />
		<property name="statsService" ref="statsService" />
	</bean>

	<!-- Service Entreprise -->

	<bean id="serviceEntrepriseRemote" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/serviceEntreprise.remoting" />
		<property name="serviceInterface" value="ch.vd.unireg.interfaces.entreprise.ServiceEntrepriseRaw" />
		<property name="executor" ref="nexusHttpRequestExecutor" />
	</bean>


	<bean id="serviceEntrepriseTracing" class="ch.vd.unireg.interfaces.entreprise.ServiceEntrepriseTracing">
		<property name="target" ref="serviceEntrepriseRemote" />
		<property name="statsService" ref="statsService" />
	</bean>

	<!-- Service infra -->

	<bean id="serviceInfraRemote" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/serviceInfra.remoting" />
		<property name="serviceInterface" value="ch.vd.unireg.interfaces.infra.ServiceInfrastructureRaw" />
		<property name="executor" ref="nexusHttpRequestExecutor" />
	</bean>

	<bean id="serviceInfrastructureTracing" class="ch.vd.unireg.interfaces.infra.ServiceInfrastructureTracing">
		<property name="target" ref="serviceInfraRemote" />
		<property name="statsService" ref="statsService" />
	</bean>

</beans>
