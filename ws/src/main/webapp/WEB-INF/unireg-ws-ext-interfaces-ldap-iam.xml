<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="ldapContextSource" class="org.springframework.ldap.core.support.LdapContextSource">
		<property name="base" value="${extprop.ace.ldap.base}" />
		<property name="url" value="${extprop.ace.ldap.url}" />
		<property name="pooled" value="false" />
		<property name="userDn" value="${extprop.ace.ldap.user}" />
		<property name="password" value="${extprop.ace.ldap.password}" />
	</bean>

	<bean id="iamClient" class="ch.vd.unireg.wsclient.iam.IamClientImpl">
		<constructor-arg ref="aceClient" />
	</bean>

	<bean id="contextSource" class="org.springframework.ldap.pool.factory.PoolingContextSource">
		<property name="contextSource" ref="ldapContextSource" />
		<property name="dirContextValidator" ref="contextValidator" />
		<property name="testOnBorrow" value="true" />
	</bean>

	<bean id="contextValidator" class="org.springframework.ldap.pool.validation.DefaultDirContextValidator" />

	<bean id="ldapTemplate" class="org.springframework.ldap.core.LdapTemplate">
		<property name="contextSource" ref="contextSource" />
	</bean>

	<bean id="aceClient" class="ch.vd.registre.ace.AceClientImpl">
		<property name="allowPrivate" value="${extprop.ace.ldap.allowPrivate:true}" />
		<property name="template" ref="ldapTemplate" />
	</bean>
</beans>