<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Bean remoteJndiConnection for Host-Interfaces EJBs -->
	<bean id="ejbJndiTemplate" class="ch.vd.uniregctb.utils.UniregJndiTemplate">
		<property name="environment">
			<map>
				<entry key="java.naming.factory.initial" value="${host-interfaces.factory}" />
				<entry key="java.naming.provider.url" value="${extprop.host-interfaces.url}"/>
				<entry key="java.naming.security.principal" value="${extprop.host-interfaces.username}" />
				<entry key="java.naming.security.credentials" value="${extprop.host-interfaces.password}" />
			</map>
		</property>
	</bean>

	<!-- Bean client serviceInfrastructure -->
	<bean name="_serviceInfrastructure" class="${host-interfaces.ejb-proxy-class}">
		<property name="jndiName" value="ejb/ch.vd.infrastructure.service.ServiceInfrastructure-${host-interfaces.version-short}"/>
		<property name="cacheSessionBean" value="${extprop.host-interfaces.cacheSessionBean}"/>
		<property name="resourceRef" value="false"/>
		<property name="lookupHomeOnStartup" value="false"/>
		<property name="refreshHomeOnConnectFailure" value="true"/>
		<property name="businessInterface" value="ch.vd.infrastructure.service.ServiceInfrastructure"/>
		<property name="jndiTemplate" ref="ejbJndiTemplate"/>
	</bean>

	<!-- Bean client serviceInfrastructureFiscal -->
	<bean name="_serviceInfrastructureFiscal" class="${host-interfaces.ejb-proxy-class}">
		<property name="jndiName" value="ejb/ch.vd.infrastructure.fiscal.service.ServiceInfrastructureFiscal-${host-interfaces.version-short}"/>
		<property name="cacheSessionBean" value="${extprop.host-interfaces.cacheSessionBean}"/>
		<property name="resourceRef" value="false"/>
		<property name="lookupHomeOnStartup" value="false"/>
		<property name="refreshHomeOnConnectFailure" value="true"/>
		<property name="businessInterface" value="ch.vd.infrastructure.fiscal.service.ServiceInfrastructureFiscal"/>
		<property name="jndiTemplate" ref="ejbJndiTemplate"/>
	</bean>

	<bean id="serviceInfrastructureClientRaw" class="ch.vd.unireg.wsclient.host.interfaces.ServiceInfrastructureClientImpl">
		<property name="baseUrl" value="${extprop.host-interfaces.webservice.url}" />
		<property name="username" value="${extprop.host-interfaces.webservice.username}" />
		<property name="password" value="${extprop.host-interfaces.webservice.password}" />

	</bean>

	<bean id="serviceInfrastructureClientTracing" class="ch.vd.uniregctb.wsclient.host.ServiceInfrastructureClientTracing">
		<property name="statsService" ref="statsService"/>
		<property name="target" ref="serviceInfrastructureClientRaw"/>
	</bean>

	<alias name="serviceInfrastructureClientTracing" alias="serviceInfrastructureClient"/>
	
</beans>
