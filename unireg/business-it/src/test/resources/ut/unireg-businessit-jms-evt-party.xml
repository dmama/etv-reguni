<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
							http://www.springframework.org/schema/util
							http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<bean id="partyRequestListener" class="ch.vd.uniregctb.evenement.party.PartyRequestListener" parent="esbMessageListener">
		<property name="handlers">
			<util:map>
				<entry key="ch.vd.unireg.xml.event.party.address.v1.AddressRequest" value-ref="addressRequestHandler" />
				<entry key="ch.vd.unireg.xml.event.party.numbers.v1.NumbersRequest" value-ref="numberRequestHandler" />
				<entry key="ch.vd.unireg.xml.event.party.party.v1.PartyRequest" value-ref="partyRequestHandler" />
			</util:map>
		</property>
	</bean>

	<bean id="partyRequestEndpointManager" class="ch.vd.uniregctb.jms.JmxAwareEsbMessageEndpointManager">
		<property name="resourceAdapter" ref="jmsResourceAdapter"/>
		<property name="activationSpec">
			<bean class="org.apache.activemq.ra.ActiveMQActivationSpec">
				<property name="destination" value="${testprop.jms.queue.party.service}"/>
				<property name="destinationType" value="javax.jms.Queue"/>
				<property name="maxSessions" value="1"/>
				<property name="maxMessagesPerSessions" value="1"/>
			</bean>
		</property>
		<property name="messageListener" ref="partyRequestListener" />
		<property name="transactionManager" ref="transactionManager" />
		<property name="autoStartup" value="true" />
	</bean>

	<bean id="addressRequestHandler" class="ch.vd.uniregctb.evenement.party.AddressRequestHandler">
		<property name="tiersDAO" ref="tiersDAO" />
		<property name="adresseService" ref="adresseService" />
	</bean>

	<bean id="numberRequestHandler" class="ch.vd.uniregctb.evenement.party.NumbersRequestHandler">
		<property name="tiersDAO" ref="tiersDAO" />
	</bean>

	<bean id="partyRequestHandler" class="ch.vd.uniregctb.evenement.party.PartyRequestHandler">
		<property name="adresseService" ref="adresseService" />
		<property name="tiersDAO" ref="tiersDAO" />
		<property name="tiersService" ref="tiersService" />
		<property name="infraService" ref="serviceInfrastructureService" />
		<property name="situationService" ref="situationFamilleService" />
		<property name="ibanValidator" ref="ibanValidator" />
		<property name="parametreService" ref="parametreAppService" />
		<property name="serviceCivil" ref="serviceCivilService" />
		<property name="hibernateTemplate" ref="hibernateTemplate" />
		<property name="transactionManager" ref="transactionManager" />
		<property name="lrService" ref="lrService" />
		<property name="diService" ref="diService" />
		<property name="bamMessageSender" ref="bamMessageSender" />
		<property name="servicePM" ref="servicePersonneMoraleService" />
		<property name="assujettissementService" ref="assujettissementService" />
		<property name="periodeImpositionService" ref="periodeImpositionService" />
	</bean>

</beans>
