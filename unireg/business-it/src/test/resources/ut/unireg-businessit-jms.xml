<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="esbJmsTemplate" class="ch.vd.technical.esb.jms.EsbJmsTemplate">
		<property name="connectionFactory" ref="jmsConnectionFactory" />
		<property name="esbStore" ref="raftEsbStore" />
		<property name="receiveTimeout" value="1000" />
		<property name="application" value="unireg" />
		<property name="domain" value="fiscalite"/>
	</bean>

	<bean id="jmsConnectionFactory" class="ch.vd.technical.esb.util.ConnectionFactoryFactoryBean">
		<property name="connectionManager" ref="jmsConnectionManager"/>
		<property name="managedConnectionFactory" ref="jmsManagedConnectionFactory"/>
	</bean>

	<bean id="jmsConnectionManager" class="org.jencks.factory.ConnectionManagerFactoryBean">
		<property name="transaction" value="xa" />
		<property name="transactionManager" ref="transactionManager" />
		<property name="poolMaxSize" value="20"/>
		<property name="connectionTracker">
		   <bean class="org.jencks.factory.ConnectionTrackerFactoryBean">
			   <property name="geronimoTransactionManager" ref="transactionManager" />
		   </bean>
		</property>
	</bean>

	<bean id="jmsManagedConnectionFactory" class="org.apache.activemq.ra.ActiveMQManagedConnectionFactory">
	   <property name="resourceAdapter">
		  <bean class="org.apache.activemq.ra.ActiveMQResourceAdapter">
			 <property name="serverUrl" value="${testprop.esb.jms.url}" />
			 <property name="userName" value="${testprop.esb.jms.username}" />
			 <property name="password" value="${testprop.esb.jms.password}" />
			 <property name="maximumRedeliveries" value="1"/>
			 <property name="allPrefetchValues" value="50"/>
		 </bean>
	  </property>
	</bean>

	<!-- Versions 'hors-transaction' de l'ESB template + JMS template -->
	<bean id="noTxConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
		<property name="brokerURL" value="${testprop.esb.jms.url}" />
		<property name="userName" value="${testprop.esb.jms.username}" />
		<property name="password" value="${testprop.esb.jms.password}" />
	</bean>

	<bean id="noTxEsbJmsTemplate" class="ch.vd.uniregctb.jms.EsbTemplateTracing" lazy-init="true">
		<property name="connectionFactory" ref="noTxConnectionFactory" />
		<property name="esbStore" ref="raftEsbStore" />
		<property name="receiveTimeout" value="1000" />
		<property name="statsService" ref="jmsStatsService" />
		<property name="application" value="unireg" />
		<property name="domain" value="fiscalite"/>
	</bean>

	<bean id="raftEsbStore" class="ch.vd.technical.esb.store.raft.RaftEsbStore">
		<property name="endpoint" value="${testprop.esb.raft.store}" />
	</bean>

	<bean id="esbMessageFactory" class="ch.vd.technical.esb.EsbMessageFactory"/>

	<bean id="evenementFiscalSenderPourTest" class="ch.vd.uniregctb.evenement.fiscal.EvenementFiscalSenderImpl">
		<property name="esbTemplate" ref="esbJmsTemplate" />
		<property name="esbMessageFactory" ref="esbMessageFactory"/>
		<property name="serviceDestination" value="ch.vd.unireg.test.output" />
		<property name="enabled" value="true" />
	</bean>

</beans>
