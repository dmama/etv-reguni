<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Bean remoteJndiConnection connexion base de donnÃ©es -->
	<bean id="ejbJndiTemplate" class="ch.vd.uniregctb.utils.UniregJndiTemplate">
		<property name="environment">
			<map>

				<!-- default
				default -->
				<entry key="java.naming.factory.initial" value="${host-interfaces.factory}" />
				<entry key="java.naming.provider.url" value="${testprop.host-interfaces.url}"/>
				<entry key="java.naming.security.principal" value="${testprop.host-interfaces.username}" />
				<entry key="java.naming.security.credentials" value="${testprop.host-interfaces.password}" />

				<!-- WLS solve61v
				<entry key="java.naming.factory.initial" value="weblogic.jndi.WLInitialContextFactory" />
				<entry key="java.naming.provider.url" value="t3://solve61v:65032"/>
				<entry key="java.naming.security.principal" value="unireg-interfaces-user" />
				<entry key="java.naming.security.credentials" value="unireg-interfaces-pwd" />
				solve61v -->

			</map>
		</property>
	</bean>

	<!-- Bean client serviceInfrastructure -->
	<bean name="_serviceInfrastructure" class="org.springframework.ejb.access.SimpleRemoteStatelessSessionProxyFactoryBean">
		<property name="jndiName" value="ejb/ch.vd.infrastructure.service.ServiceInfrastructure-${host-interfaces.version-short}"/>
		<property name="resourceRef" value="false"/>
		<property name="lookupHomeOnStartup" value="false"/>
		<property name="businessInterface" value="ch.vd.infrastructure.service.ServiceInfrastructure"/>
		<property name="jndiTemplate" ref="ejbJndiTemplate"/>
	</bean>

