<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Service civil -->

	<bean id="serviceCivilRcPers" class="ch.vd.unireg.interfaces.civil.rcpers.ServiceCivilRCPers">
		<property name="client" ref="rcPersClient" />
		<property name="infraService" ref="serviceInfrastructureRaw"/>
	</bean>

	<bean id="serviceCivilServiceTracing" class="ch.vd.unireg.interfaces.civil.ServiceCivilTracing">
		<property name="target" ref="serviceCivilRcPers" />
		<property name="statsService" ref="statsService" />
	</bean>

	<bean id="serviceCivilServiceCache" class="ch.vd.unireg.interfaces.civil.cache.ServiceCivilCache">
		<property name="target" ref="serviceCivilServiceTracing" />
		<property name="cacheManager" ref="ehCacheManager" />
		<property name="cacheName" value="serviceCivil" />
		<property name="uniregCacheManager" ref="uniregCacheManager" />
		<property name="statsService" ref="statsService" />
		<property name="dataEventService" ref="dataEventService" />
	</bean>

	<alias alias="serviceCivilRaw" name="serviceCivilServiceCache"/>


	<!-- Service Organisation -->

	<bean id="serviceOrganisationRCEnt" class="ch.vd.unireg.interfaces.organisation.rcent.ServiceOrganisationRCEnt">
		<constructor-arg ref="rcEntAdapter"/>
		<constructor-arg ref="rcEntClientRaw"/>
		<constructor-arg ref="serviceInfrastructureRaw"/>
	</bean>

	<bean id="serviceOrganisationTracing" class="ch.vd.unireg.interfaces.organisation.ServiceOrganisationTracing">
		<property name="target" ref="serviceOrganisationRCEnt" />
		<property name="statsService" ref="statsService" />
	</bean>

	<bean id="serviceOrganisationCache" class="ch.vd.unireg.interfaces.organisation.cache.ServiceOrganisationCache">
		<property name="target" ref="serviceOrganisationTracing" />
		<property name="cacheManager" ref="ehCacheManager" />
		<property name="cacheName" value="serviceOrganisation" />
		<property name="uniregCacheManager" ref="uniregCacheManager" />
		<property name="statsService" ref="statsService" />
		<property name="dataEventService" ref="dataEventService" />
	</bean>

	<alias alias="serviceOrganisationRaw" name="serviceOrganisationCache"/>

	<bean id="serviceOrganisation" class="ch.vd.uniregctb.interfaces.service.ServiceOrganisationImpl">
		<property name="target" ref="serviceOrganisationRaw"/>
	</bean>
	<alias name="serviceOrganisation" alias="serviceOrganisationService"/>


	<!-- Service UPI -->

	<bean id="serviceUpiRcPers" class="ch.vd.unireg.interfaces.upi.rcpers.ServiceUpiRCPers">
		<property name="client" ref="rcPersClient"/>
		<property name="infraService" ref="serviceInfrastructureRaw"/>
	</bean>

	<bean id="serviceUpiTracing" class="ch.vd.unireg.interfaces.upi.ServiceUpiTracing">
		<property name="target" ref="serviceUpiRcPers"/>
		<property name="statsService" ref="statsService"/>
	</bean>

	<alias alias="serviceUpiRaw" name="serviceUpiTracing"/>


	<!-- Service infra -->

	<bean id="serviceInfrastructureServiceHostRest" class="ch.vd.unireg.interfaces.infra.host.ServiceInfrastructureHostInterfacesRest">
		<property name="client" ref="serviceInfrastructureClient" />
	</bean>

	<bean id="serviceInfrastructureFidor" class="ch.vd.unireg.interfaces.infra.fidor.ServiceInfrastructureFidor">
		<property name="fidorClient" ref="fidorClient" />
		<property name="uniregCacheManager" ref="uniregCacheManager" />
	</bean>

	<bean id="serviceInfrastructureMarshaller" class="ch.vd.unireg.interfaces.infra.ServiceInfrastructureMarshaller">
		<property name="hostService" ref="serviceInfrastructureServiceHostRest" />
		<property name="fidorService" ref="serviceInfrastructureFidor" />
	</bean>

	<bean id="serviceInfrastructureTracing" class="ch.vd.unireg.interfaces.infra.ServiceInfrastructureTracing">
		<property name="target" ref="serviceInfrastructureMarshaller" />
		<property name="statsService" ref="statsService" />
	</bean>

	<bean id="serviceInfrastructureCache" class="ch.vd.unireg.interfaces.infra.cache.ServiceInfrastructureCache">
		<property name="target" ref="serviceInfrastructureTracing" />
		<property name="cacheManager" ref="ehCacheManager" />
		<property name="cacheName" value="serviceInfra" />
		<property name="shortLivedCacheName" value="serviceInfraShortLived" />
		<property name="uniregCacheManager" ref="uniregCacheManager" />
		<property name="statsService" ref="statsService" />
	</bean>

	<alias alias="serviceInfrastructureRaw" name="serviceInfrastructureCache"/>

</beans>
