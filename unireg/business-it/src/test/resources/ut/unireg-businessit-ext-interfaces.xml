<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
							http://www.springframework.org/schema/util
							http://www.springframework.org/schema/util/spring-util.xsd">

	<!-- Ce fichier définit les services d'interfaces externes; c'est-à-dire les clients de services externes à Unireg et que Unireg utilise. -->

	<!-- Bean remoteJndiConnection connexion base de données -->
	<bean id="ejbJndiTemplate" class="ch.vd.uniregctb.utils.UniregJndiTemplate">
		<property name="environment">
			<map>
				<entry key="java.naming.factory.initial" value="${host-interfaces.factory}" />
				<entry key="java.naming.provider.url" value="${testprop.host-interfaces.url}"/>
				<entry key="java.naming.security.principal" value="${testprop.host-interfaces.username}" />
				<entry key="java.naming.security.credentials" value="${testprop.host-interfaces.password}" />
			</map>
		</property>
	</bean>

	<!-- Bean client serviceInfrastructure -->
	<bean name="_serviceInfrastructure" class="org.springframework.ejb.access.SimpleRemoteStatelessSessionProxyFactoryBean">
		<property name="jndiName" value="ejb/ch.vd.infrastructure.service.ServiceInfrastructure-${host-interfaces.version-short}"/>
		<property name="resourceRef" value="false"/>
		<property name="lookupHomeOnStartup" value="false"/>
		<property name="businessInterface" value="ch.vd.infrastructure.service.ServiceInfrastructure"/>
		<property name="jndiTemplate" ref="ejbJndiTemplate"/>
	</bean>

	<!-- Bean client serviceInfrastructureFiscal -->
	<bean name="_serviceInfrastructureFiscal" class="org.springframework.ejb.access.SimpleRemoteStatelessSessionProxyFactoryBean">
		<property name="jndiName" value="ejb/ch.vd.infrastructure.fiscal.service.ServiceInfrastructureFiscal-${host-interfaces.version-short}"/>
		<property name="resourceRef" value="false"/>
		<property name="lookupHomeOnStartup" value="false"/>
		<property name="businessInterface" value="ch.vd.infrastructure.fiscal.service.ServiceInfrastructureFiscal"/>
		<property name="jndiTemplate" ref="ejbJndiTemplate"/>
	</bean>

	<!-- Bean client serviceSecurite -->
	<bean name="_serviceSecurite" class="org.springframework.ejb.access.SimpleRemoteStatelessSessionProxyFactoryBean">
		<property name="jndiName" value="ejb/ch.vd.securite.service.ServiceSecurite-${host-interfaces.version-short}"/>
		<property name="resourceRef" value="false"/>
		<property name="lookupHomeOnStartup" value="false"/>
		<property name="businessInterface" value="ch.vd.securite.service.ServiceSecurite"/>
		<property name="jndiTemplate" ref="ejbJndiTemplate"/>
	</bean>

	<!-- Bean client servicePM -->
	<bean name="_servicePersonneMorale" class="org.springframework.ejb.access.SimpleRemoteStatelessSessionProxyFactoryBean">
		<property name="jndiName" value="ejb/ch.vd.registre.pm.service.ServicePersonneMorale-${host-interfaces.version-short}"/>
		<property name="resourceRef" value="false"/>
		<property name="lookupHomeOnStartup" value="false"/>
		<property name="businessInterface" value="ch.vd.registre.pm.service.ServicePersonneMorale"/>
		<property name="jndiTemplate" ref="ejbJndiTemplate"/>
	</bean>

	<bean id="fidorClient" class="ch.vd.uniregctb.webservice.fidor.v5.FidorClientImpl">
		<property name="serviceUrl" value="${testprop.webservice.fidor.url}" />
		<property name="username" value="${testprop.webservice.fidor.username}" />
		<property name="password" value="${testprop.webservice.fidor.password}" />
	</bean>

	<bean id="rcPersClient" class="ch.vd.unireg.wsclient.rcpers.RcPersClientImpl">
		<property name="baseUrl" value="${testprop.webservice.rcpers.url}" />
		<property name="username" value="${testprop.webservice.rcpers.username}" />
		<property name="password" value="${testprop.webservice.rcpers.password}" />
		<property name="peoplePath" value="${testprop.webservice.rcpers.peoplePath}" />
		<property name="peopleByEventIdPath" value="${testprop.webservice.rcpers.peopleByEventIdPath}" />
		<property name="peopleBySocialNumberPath" value="${testprop.webservice.rcpers.peopleBySocialNumberPath}" />
		<property name="searchPath" value="${testprop.webservice.rcpers.searchPath}" />
		<property name="eventPath" value="${testprop.webservice.rcpers.eventPath}" />
		<property name="upiGetInfoPersonPath" value="${testprop.webservice.rcpers.upiGetInfoPersonPath}"/>
	</bean>

	<!-- Client RCEnt -->

	<bean id="rcEntClientRaw" class="ch.vd.unireg.wsclient.rcent.RcEntClientImpl">
		<property name="baseUrl" value="${testprop.webservice.rcent.url}"/>
		<property name="username" value="${testprop.webservice.rcent.username}"/>
		<property name="password" value="${testprop.webservice.rcent.password}"/>
		<property name="organisationPath" value="/organisation/CT.VD.PARTY"/>
		<property name="organisationsOfNoticePath" value="/organisationsOfNotice"/>
		<property name="pingPath" value="/infrastructure/ping"/>
		<property name="validationEnabled" value="${testprop.webservice.rcent.validate}"/>
		<property name="schemasLocations">
			<util:list>
				<value>eVD-0004-3-0.xsd</value>
				<value>eVD-0021-1-1.xsd</value>
				<value>eVD-0022-1-3.xsd</value>
				<value>eVD-0023-1-3.xsd</value>
				<value>eVD-0024-1-3.xsd</value>
			</util:list>
		</property>
	</bean>

	<!-- Adapteur RCEnt -->

	<bean id="organisationHistorizer" class="ch.vd.uniregctb.adapter.rcent.historizer.OrganisationHistorizer"/>

	<bean id="rcEntAdapter" class="ch.vd.uniregctb.adapter.rcent.service.RCEntAdapter">
		<constructor-arg ref="rcEntClientRaw"/>
		<constructor-arg ref="organisationHistorizer"/>
	</bean>

</beans>
