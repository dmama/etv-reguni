<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- ExÃ©cuteur HTTP pour tous les appels spring-remoting de WS vers Web -->
	<bean id="webHttpRequestExecutor" class="ch.vd.unireg.servlet.remoting.GentilHttpInvokerRequestExecutor">
		<constructor-arg value="web"/>
		<property name="username" value="${extprop.remoting.unireg.username}" />
		<property name="password" value="${extprop.remoting.unireg.password}" />
		<property name="maxConnectionsPerHost" value="${extprop.remoting.web.maxConnectionsPerHost}" />
		<property name="maxTotalConnections" value="${extprop.remoting.web.maxTotalConnections}" />
	</bean>

	<bean id="globalTiersSearcherRemoting" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.url}/tiersSearcher.remoting" />
		<property name="serviceInterface" value="ch.vd.uniregctb.indexer.tiers.GlobalTiersSearcher" />
		<property name="executor" ref="webHttpRequestExecutor" />
	</bean>

	<bean id="globalTiersSearcherTracing" class="ch.vd.uniregctb.indexer.tiers.GlobalTiersSearcherTracing">
		<property name="target" ref="globalTiersSearcherRemoting"/>
		<property name="statsService" ref="statsService"/>
	</bean>

	<alias alias="globalTiersSearcher" name="globalTiersSearcherTracing"/>

	<bean id="statsService" class="ch.vd.uniregctb.stats.StatsServiceImpl">
		<property name="logPeriode" value="${extprop.stats.log.period}"/>
	</bean>

</beans>
