<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="globalTiersSearcherRemoting" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.url}/tiersSearcher.remoting" />
		<property name="serviceInterface" value="ch.vd.uniregctb.indexer.tiers.GlobalTiersSearcher" />
		<property name="username" value="${extprop.remoting.unireg.username}" />
		<property name="password" value="${extprop.remoting.unireg.password}" />
	</bean>

	<bean id="globalTiersSearcherTracing" class="ch.vd.uniregctb.indexer.tiers.GlobalTiersSearcherTracing">
		<property name="target" ref="globalTiersSearcherRemoting"/>
		<property name="statsService" ref="statsService"/>
	</bean>

	<alias alias="globalTiersSearcher" name="globalTiersSearcherTracing"/>

	<bean id="globalTiersIndexer" class="ch.vd.uniregctb.indexer.tiers.ZeroTiersIndexerImpl" />

	<bean id="tacheService" class="ch.vd.uniregctb.tache.MockTacheService" />
	<bean id="delaisService" class="ch.vd.uniregctb.parametrage.MockDelaisService" />

	<bean id="editiqueService" class="ch.vd.uniregctb.editique.mock.MockEditiqueService" />
	<bean id="editiqueCompositionService" class="ch.vd.uniregctb.editique.mock.MockEditiqueCompositionService" />
	<bean id="impressionDIHelper" class="ch.vd.uniregctb.declaration.ordinaire.MockImpressionDeclarationImpotOrdinaireHelper" />
	<bean id="impressionSommationDIHelper" class="ch.vd.uniregctb.declaration.ordinaire.MockImpressionSommationDIHelper" />
	<bean id="impressionSommationLRHelper" class="ch.vd.uniregctb.declaration.source.MockImpressionSommationLRHelper" />
	<bean id="impressionConfirmationDelaiHelper" class="ch.vd.uniregctb.declaration.ordinaire.MockImpressionConfirmationDelaiHelper" />

</beans>
