<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="applicationChecker" class="ch.vd.uniregctb.checker.ApplicationChecker">
		<property name="version" value="${pom.version}" />
		<property name="serviceCivilChecker" ref="serviceCivilChecker" />
		<property name="serviceHostInfraChecker" ref="serviceHostInfraChecker" />
		<property name="serviceFidorChecker" ref="serviceFidorChecker" />
		<property name="serviceSecuriteChecker" ref="serviceSecuriteChecker" />
		<property name="tiersSearcherChecker" ref="tiersSearcherChecker" />
	</bean>

	<bean id="serviceCivilChecker" class="ch.vd.uniregctb.checker.ServiceCivilChecker">
		<property name="serviceCivilRaw" ref="serviceCivilServiceHost" />
	</bean>

	<bean id="serviceHostInfraChecker" class="ch.vd.uniregctb.checker.ServiceHostInfraChecker">
		<property name="serviceInfraRaw" ref="serviceInfrastructureServiceHost" />
	</bean>

	<bean id="serviceFidorChecker" class="ch.vd.uniregctb.checker.ServiceFidorChecker">
		<property name="serviceFidorRaw" ref="serviceInfrastructureFidor" />
	</bean>

	<bean id="serviceSecuriteChecker" class="ch.vd.uniregctb.checker.ServiceSecuriteChecker">
		<property name="serviceSecuriteRaw" ref="serviceSecuriteServiceHost" />
	</bean>

	<bean id="tiersSearcherChecker" class="ch.vd.uniregctb.checker.TiersSearcherChecker">
		<property name="searcher" ref="globalTiersSearcher" />
	</bean>

</beans>
