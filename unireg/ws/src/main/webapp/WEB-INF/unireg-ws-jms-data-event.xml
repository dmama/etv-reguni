<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dataEventJmsListener" class="ch.vd.uniregctb.jms.GentilEsbMessageEndpointListener" parent="esbMessageListener">
		<property name="handler" ref="dataEventJmsHandler"/>
	</bean>

	<bean id="dataEventJmsHandler" class="ch.vd.uniregctb.data.DataEventJmsHandler">
		<property name="dataEventService" ref="dataEventService" />
	</bean>

	<bean id="dataEventJmsEndpointManager" class="ch.vd.uniregctb.jms.JmxAwareEsbMessageEndpointManager">
		<property name="resourceAdapter" ref="jmsResourceAdapter"/>
		<property name="activationSpec">
			<bean class="org.apache.activemq.ra.ActiveMQActivationSpec">
				<property name="destination" value="${extprop.jms.queue.db.event.input}"/>
				<property name="destinationType" value="javax.jms.Queue"/>
				<property name="maxSessions" value="${extprop.jms.queue.db.event.consumers}"/>
				<property name="maxMessagesPerSessions" value="1"/>
			</bean>
		</property>
		<property name="messageListener" ref="dataEventJmsListener"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="internal" value="true" /> <!-- [UNIREG-3242] utilisation d'une queue interne -->
		<property name="autoStartup" value="${extprop.jms.queue.db.event.enabled}" />
	</bean>

</beans>
