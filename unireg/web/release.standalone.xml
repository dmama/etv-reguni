<assembly>
	<id>release</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<!-- Documentation -->
		<fileSet>
			<directory>../base/doc</directory>
			<outputDirectory>docs</outputDirectory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<includes>
				<include>INSTALL.doc</include>
			</includes>
		</fileSet>
		<!-- Fichier unireg-log4j.xml -->
		<fileSet>
			<directory>config/</directory>
			<includes>
				<include>unireg-log4j.xml</include>
			</includes>
			<outputDirectory>config</outputDirectory>
		</fileSet>
		<!-- Fichier properties et ehcache.xml -->
		<fileSet>
			<directory>config/standalone</directory>
			<outputDirectory>config</outputDirectory>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
		<!-- Fichiers SQL -->
		<fileSet>
			<directory>../base/sql</directory>
			<outputDirectory>sql</outputDirectory>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<!-- BEGIN_LVERSION -->
			<source>target/uniregctb-web-4.12.0-SNAPSHOT.war</source>
			<!-- END_LVERSION -->
			<outputDirectory>deployment</outputDirectory>
			<destName>uniregweb.war</destName>
		</file>
	</files>
</assembly>
