<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- EvÃ©nements Organisation -->

	<!-- Traitements de masse -->

	<bean id="evtOrganisationMasseListener" class="ch.vd.uniregctb.jms.GentilEsbMessageEndpointListener" parent="esbMessageListener">
		<property name="handler" ref="evtOrganisationMasseEsbHandler"/>
	</bean>

	<bean id="evtOrganisationMasseEsbHandler" class="ch.vd.uniregctb.evenement.civil.ech.EvenementOrganisationEsbHandler" parent="evtOrganisationEsbHandler">
		<property name="processingMode" value="BATCH"/>
		<property name="recuperateur" ref="evtOrganisationRecuperateur"/>
		<property name="delaiRecuperationMinutes" value="${extprop.evtCivil.rethrowDelayOnStartup}"/>
	</bean>

	<bean id="evtOrganisationRecuperateur" class="ch.vd.uniregctb.evenement.civil.ech.EvenementOrganisationRecuperateurImpl">
		<property name="evtCivilDAO" ref="evenementOrganisationDAO"/>
		<property name="receptionHandler" ref="evtOrganisationReceptionHandler"/>
		<property name="transactionManager" ref="transactionManager"/>
	</bean>

	<bean id="evtOrganisationMasseEndpointManager" class="ch.vd.uniregctb.jms.JmxAwareEsbMessageEndpointManager">
		<property name="resourceAdapter" ref="jmsResourceAdapter"/>
		<property name="activationSpec">
			<bean class="org.apache.activemq.ra.ActiveMQActivationSpec">
				<property name="destination" value="${extprop.jms.queue.evtOrganisationMasse}"/>
				<property name="destinationType" value="javax.jms.Queue"/>
				<property name="maxSessions" value="${extprop.jms.queue.evtOrganisationMasse.consumers}"/>
				<property name="maxMessagesPerSessions" value="100"/>
			</bean>
		</property>
		<property name="messageListener" ref="evtOrganisationMasseListener"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="autoStartup" value="${extprop.jms.queue.evtOrganisationMasse.enabled}" />
	</bean>

	<!-- Traitements "manuels" -->

	<bean id="evtOrganisationIndividuelListener" class="ch.vd.uniregctb.jms.GentilEsbMessageEndpointListener" parent="esbMessageListener">
		<property name="handler" ref="evtOrganisationIndividuelEsbHandler"/>
	</bean>

	<bean id="evtOrganisationIndividuelEsbHandler" class="ch.vd.uniregctb.evenement.civil.ech.EvenementOrganisationEsbHandler" parent="evtOrganisationEsbHandler">
		<property name="processingMode" value="MANUAL"/>
	</bean>

	<bean id="evtOrganisationIndividuelEndpointManager" class="ch.vd.uniregctb.jms.JmxAwareEsbMessageEndpointManager">
		<property name="resourceAdapter" ref="jmsResourceAdapter"/>
		<property name="activationSpec">
			<bean class="org.apache.activemq.ra.ActiveMQActivationSpec">
				<property name="destination" value="${extprop.jms.queue.evtOrganisationIndividuel}"/>
				<property name="destinationType" value="javax.jms.Queue"/>
				<property name="maxSessions" value="${extprop.jms.queue.evtOrganisationIndividuel.consumers}"/>
				<property name="maxMessagesPerSessions" value="10"/>
			</bean>
		</property>
		<property name="messageListener" ref="evtOrganisationIndividuelListener"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="autoStartup" value="${extprop.jms.queue.evtOrganisationIndividuel.enabled}" />
	</bean>

	<!-- Parties communes -->

	<bean id="evtOrganisationEsbHandler" abstract="true" class="ch.vd.uniregctb.evenement.civil.ech.EvenementOrganisationEsbHandler">
		<property name="receptionHandler" ref="evtOrganisationReceptionHandler"/>
		<property name="ignoredEventTypes">
			<set>
				<value>CORR_RELIGION</value>
				<value>CORR_LIEU_NAISSANCE</value>
				<value>CHGT_RELIGION</value>
				<value>CHGT_BLOCAGE_ADRESSE</value>
			</set>
		</property>
		<property name="eventTypesWithNullEventDateReplacement">
			<set>
				<value>ATTRIBUTION_DONNEES_UPI</value>
				<value>CORR_DONNEES_UPI</value>
				<value>ANNULATION_DONNEES_UPI</value>
			</set>
		</property>
	</bean>

	<bean id="evtOrganisationNotificationQueue" class="ch.vd.uniregctb.evenement.civil.engine.ech.EvenementCivilNotificationQueueImpl">
		<constructor-arg name="delayInSeconds" value="${extprop.evtCivil.acknowledgementDelay}"/>
		<property name="evtCivilService" ref="evtOrganisationService"/>
		<property name="transactionManager" ref="transactionManager"/>
	</bean>

	<bean id="evtOrganisationReceptionHandler" class="ch.vd.uniregctb.evenement.civil.ech.EvenementOrganisationReceptionHandlerImpl">
		<property name="evtCivilDAO" ref="evenementOrganisationDAO"/>
		<property name="notificationQueue" ref="evtOrganisationNotificationQueue"/>
		<property name="transactionManager" ref="transactionManager"/>
        <property name="evtCivilService" ref="evtOrganisationService" />
		<property name="statsService" ref="statsService" />
	</bean>

	<bean id="evtOrganisationProcessor" class="ch.vd.uniregctb.evenement.civil.engine.ech.EvenementOrganisationProcessorImpl">
		<property name="notificationQueue" ref="evtOrganisationNotificationQueue"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="evtCivilDAO" ref="evenementOrganisationDAO"/>
		<property name="translator" ref="evenementOrganisationTranslator"/>
		<property name="tiersService" ref="tiersService"/>
		<property name="indexer" ref="globalTiersIndexer"/>
		<property name="serviceCivil" ref="serviceCivilService"/>
		<property name="dataEventService" ref="dataEventService"/>
		<property name="mainInterceptor" ref="modificationInterceptor"/>
		<property name="parentesSynchronizerInterceptor" ref="parentesSynchronizerInterceptor"/>
	</bean>
	
	<bean id="evtOrganisationProcessorRetry" class="ch.vd.uniregctb.evenement.civil.engine.ech.EvenementOrganisationRetryProcessorImpl">
		<property name="notificationQueue" ref="evtOrganisationNotificationQueue"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="evtCivilDAO" ref="evenementOrganisationDAO"/>
		<property name="processor" ref="evtOrganisationProcessor"/>
		<property name="recuperateur" ref="evtOrganisationRecuperateur"/>
	</bean>

	<bean id="evenementOrganisationStrategyParameters" class="ch.vd.uniregctb.evenement.civil.engine.ech.EvenementOrganisationStrategyParametersImpl">
		<property name="decalageMaxPourDepart" value="${extprop.evtCivil.depart.maxMargin}"/>
	</bean>

</beans>
