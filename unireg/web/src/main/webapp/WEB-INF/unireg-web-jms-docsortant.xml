<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="evenementDocumentSortantSender" class="ch.vd.uniregctb.evenement.docsortant.EvenementDocumentSortantSenderImpl">
		<property name="esbTemplate" ref="esbJmsTemplate"/>
		<property name="esbValidator" ref="esbMessageValidator"/>
		<property name="enabled" value="${extprop.jms.queue.notification.document.sortant.enabled}"/>
		<property name="serviceDestination" value="${extprop.jms.queue.notification.document.sortant}"/>
		<property name="queueRetour" value="${extprop.jms.queue.notification.document.sortant.reponse}"/>
	</bean>

	<bean id="retourDocumentSortantListener" class="ch.vd.uniregctb.jms.GentilEsbMessageEndpointListener" parent="esbMessageListener">
		<property name="handler" ref="retourDocumentSortantEsbHandler"/>
	</bean>

	<bean id="retourDocumentSortantEsbHandler" class="ch.vd.uniregctb.evenement.docsortant.RetourDocumentSortantEsbHandler">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
		<property name="handler" ref="retourDocumentSortantHandler"/>
	</bean>

	<bean id="retourDocumentSortantHandler" class="ch.vd.uniregctb.evenement.docsortant.RetourDocumentSortantHandlerImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
		<property name="documentEFactureDAO" ref="documentEFactureDAO"/>
	</bean>

	<bean id="retourDocumentSortantEndpointManager" class="ch.vd.uniregctb.jms.JmxAwareEsbMessageEndpointManager">
		<property name="resourceAdapter" ref="jmsResourceAdapter"/>
		<property name="activationSpec">
			<bean class="org.apache.activemq.ra.ActiveMQActivationSpec">
				<property name="destination" value="${extprop.jms.queue.notification.document.sortant.reponse}"/>
				<property name="destinationType" value="javax.jms.Queue"/>
				<property name="maxSessions" value="${extprop.jms.queue.notification.document.sortant.reponse.consumers}"/>
				<property name="maxMessagesPerSessions" value="1"/>
			</bean>
		</property>
		<property name="messageListener" ref="retourDocumentSortantListener"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="autoStartup" value="${extprop.jms.queue.notification.document.sortant.reponse.enabled}" />
		<property name="description" value="RÃ©ponses aux annonces des documents sortants (avec identifiant d'indexation DPerm)"/>
	</bean>

</beans>
