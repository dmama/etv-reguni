<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd


							http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

	<!-- équivalent à l'import du fichier classpath:META-INF/cxf/cxf.xml (mais qui référence des namespaces Spring 4 et Unireg est encore en Spring 3 -->
	<bean id="cxf" class="org.apache.cxf.bus.spring.SpringBus" destroy-method="shutdown"/>
	<bean id="org.apache.cxf.bus.spring.BusWiringBeanFactoryPostProcessor" class="org.apache.cxf.bus.spring.BusWiringBeanFactoryPostProcessor"/>
	<bean id="org.apache.cxf.bus.spring.Jsr250BeanPostProcessor" class="org.apache.cxf.bus.spring.Jsr250BeanPostProcessor"/>
	<bean id="org.apache.cxf.bus.spring.BusExtensionPostProcessor" class="org.apache.cxf.bus.spring.BusExtensionPostProcessor"/>

	<!-- Job pour le testing du BatchClient -->
	<bean id="itBatchClientJob" parent="schedulerJob" class="ch.vd.uniregctb.webservices.batch.ItBatchClientJob" >
		<constructor-arg value="1" />
		<constructor-arg value="IT - BatchClient testing job" />
	</bean>

	<!-- WS REST Batch -->
	<jaxrs:server address="/batch">
		<jaxrs:serviceBeans>
			<ref bean="wsBatchEndPoint"/>
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="org.apache.cxf.jaxrs.model.wadl.WadlGenerator">
				<property name="addResourceAndMethodIds" value="false" />
				<property name="applicationTitle" value="Unireg Batch" />
			</bean>
			<bean class="org.apache.cxf.jaxrs.impl.WebApplicationExceptionMapper">
				<property name="printStackTrace" value="true" />
			</bean>
			<bean class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>
		</jaxrs:providers>
	</jaxrs:server>

	<bean id="wsBatchEndPoint" class="ch.vd.uniregctb.webservices.batch.WebServiceEndPoint">
		<property name="batchScheduler" ref="batchScheduler"/>
		<property name="documentService" ref="docService"/>
	</bean>

</beans>
