<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	<!--  Evenement -->

	<bean id="evtCivRegPPController" class="ch.vd.uniregctb.evenement.regpp.EvenementCivilRegPPController">
		<property name="tiersMapHelper" ref="tiersMapHelper" />
		<property name="evenementCivilRegPPManager" ref="evtCivRegPPManager" />
		<property name="validator" ref="evtCivCriteriaValidator" />
	</bean>

	<bean id="evtCivCriteriaValidator" class="ch.vd.uniregctb.evenement.common.EvenementCivilCriteriaValidator" />

	<bean id="evtCivRegPPManager" class="ch.vd.uniregctb.evenement.regpp.manager.EvenementCivilRegPPManagerImpl" >
		<property name="evenementCivilRegPPDAO" ref="evenementCivilRegPPDAO" />
		<property name="evenementCivilProcessor" ref="evenementCivilProcessor" />
		<property name="hostCivilService" ref="hostCivilService" />
		<property name="serviceCivilService" ref="serviceCivilService" />
		<property name="adresseService" ref="adresseService" />
		<property name="tiersService" ref="tiersService" />
		<property name="tiersDAO" ref="tiersDAO" />
		<property name="evenementService" ref="evenementService" />
		<property name="serviceInfrastructureService" ref="serviceInfrastructureService" />
	</bean>

	<bean id="evtCivEchController" class="ch.vd.uniregctb.evenement.ech.EvenementCivilEchController">
		<property name="tiersMapHelper" ref="tiersMapHelper" />
		<property name="evenementCivilEchManager" ref="evtCivEchManager" />
		<property name="validator" ref="evtCivCriteriaValidator" />
	</bean>

	<bean id="evtCivEchManager" class="ch.vd.uniregctb.evenement.ech.manager.EvenementCivilEchManagerImpl" >
		<property name="evenementCivilEchDAO" ref="evenementCivilEchDAO" />
		<property name="hostCivilService" ref="hostCivilService" />
		<property name="serviceCivilService" ref="serviceCivilService" />
		<property name="adresseService" ref="adresseService" />
		<property name="tiersService" ref="tiersService" />
		<property name="tiersDAO" ref="tiersDAO" />
		<property name="serviceInfrastructureService" ref="serviceInfrastructureService" />
	</bean>
</beans>