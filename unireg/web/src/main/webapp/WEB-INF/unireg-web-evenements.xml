<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	<!--  Evenement -->

	<bean id="evenementController" class="ch.vd.uniregctb.evenement.regpp.EvenementController">
		<property name="tiersMapHelper" ref="tiersMapHelper" />
		<property name="evenementManager" ref="evenementManager" />
		<property name="validator" ref="evenementCriteriaValidator" />
	</bean>

	<bean id="evenementCriteriaValidator" class="ch.vd.uniregctb.evenement.EvenementCriteriaValidator" />

	<bean id="evenementManager" class="ch.vd.uniregctb.evenement.regpp.manager.EvenementManagerImpl" >
		<property name="evenementCivilRegPPDAO" ref="evenementCivilRegPPDAO" />
		<property name="evenementCivilProcessor" ref="evenementCivilProcessor" />
		<property name="hostCivilService" ref="hostCivilService" />
		<property name="serviceCivilService" ref="serviceCivilService" />
		<property name="adresseService" ref="adresseService" />
		<property name="tiersService" ref="tiersService" />
		<property name="tiersDAO" ref="tiersDAO" />
		<property name="evenementService" ref="evenementService" />
		<property name="serviceInfrastructureService" ref="serviceInfrastructureService" />
	</bean>

	<bean id="evenementEchController" class="ch.vd.uniregctb.evenement.ech.EvenementEchController">
		<property name="tiersMapHelper" ref="tiersMapHelper" />
		<property name="evenementEchManager" ref="evenementEchManager" />
		<property name="validator" ref="evenementCriteriaValidator" />
	</bean>

	<bean id="evenementEchManager" class="ch.vd.uniregctb.evenement.ech.manager.EvenementEchManagerImpl" >
		<property name="evenementCivilEchDAO" ref="evenementCivilEchDAO" />
		<property name="hostCivilService" ref="hostCivilService" />
		<property name="serviceCivilService" ref="serviceCivilService" />
		<property name="adresseService" ref="adresseService" />
		<property name="tiersService" ref="tiersService" />
		<property name="tiersDAO" ref="tiersDAO" />
		<property name="serviceInfrastructureService" ref="serviceInfrastructureService" />
	</bean>
</beans>