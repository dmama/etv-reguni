<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="evtCivCriteriaValidator" class="ch.vd.uniregctb.evenement.common.EvenementCivilCriteriaValidator" />

	<bean id="evtCivEchCriteriaValidator" class="ch.vd.uniregctb.evenement.ech.EvenementCivilEchCriteriaValidator" />

	<bean id="evtCivController" abstract="true">
		<property name="tiersMapHelper" ref="tiersMapHelper" />
	</bean>

	<bean id="evtCivRegPPController" class="ch.vd.uniregctb.evenement.regpp.EvenementCivilRegPPController" parent="evtCivController">
		<property name="validator" ref="evtCivCriteriaValidator" />
		<property name="manager" ref="evtCivRegPPManager" />
	</bean>

	<bean id="evtCivEchController" class="ch.vd.uniregctb.evenement.ech.EvenementCivilEchController" parent="evtCivController">
		<property name="validator" ref="evtCivEchCriteriaValidator" />
		<property name="manager" ref="evtCivEchManager" />
	</bean>

    <bean id ="evtCivManager" abstract="true">
		<property name="hostCivilService" ref="hostCivilService" />
		<property name="serviceCivilService" ref="serviceCivilService" />
		<property name="adresseService" ref="adresseService" />
		<property name="tiersService" ref="tiersService" />
		<property name="tiersDAO" ref="tiersDAO" />
		<property name="serviceInfrastructureService" ref="serviceInfrastructureService" />
	</bean>

	<bean id="evtCivRegPPManager" class="ch.vd.uniregctb.evenement.regpp.manager.EvenementCivilRegPPManagerImpl" parent="evtCivManager">
		<property name="evenementDAO" ref="evenementCivilRegPPDAO" />
		<property name="evenementCivilProcessor" ref="evenementCivilProcessor" />
	</bean>

	<bean id="evtCivEchManager" class="ch.vd.uniregctb.evenement.ech.manager.EvenementCivilEchManagerImpl" parent="evtCivManager">
		<property name="evenementDAO" ref="evenementCivilEchDAO" />
		<property name="evenementService" ref="evtCivilEchService" />
		<property name="evenementNotificationQueue" ref="evtCivilEchNotificationQueue" />
		<property name="evenementProcessor" ref="evtCivilEchProcessor" />
	</bean>

</beans>