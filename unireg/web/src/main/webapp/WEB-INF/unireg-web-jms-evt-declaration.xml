<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="evenementDeclarationListener" class="ch.vd.uniregctb.jms.GentilEsbMessageEndpointListener" parent="esbMessageListener">
		<property name="handler" ref="evenementDeclarationEsbHandler" />
	</bean>

	<bean id="evenementDeclarationEsbHandler" class="ch.vd.uniregctb.evenement.di.EvenementDeclarationEsbHandler">
		<property name="handler" ref="evenementDeclarationService" />
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>

	<bean id="evenementDeclarationEndpointManager" class="ch.vd.uniregctb.jms.JmxAwareEsbMessageEndpointManager">
		<property name="resourceAdapter" ref="jmsResourceAdapter"/>
		<property name="activationSpec">
			<bean class="org.apache.activemq.ra.ActiveMQActivationSpec">
				<property name="destination" value="${extprop.jms.queue.evtDeclaration.input}"/>
				<property name="destinationType" value="javax.jms.Queue"/>
				<property name="maxSessions" value="1"/>
				<property name="maxMessagesPerSessions" value="1"/>
			</bean>
		</property>
		<property name="messageListener" ref="evenementDeclarationListener" />
		<property name="transactionManager" ref="transactionManager"/>
		<property name="autoStartup" value="${extprop.jms.queue.evtDeclaration.input.enabled}" />
	</bean>

	<bean id="evenementDeclarationSender" class="ch.vd.uniregctb.evenement.di.EvenementDeclarationSenderImpl">
		<property name="esbTemplate" ref="esbJmsTemplate" />
		<property name="esbValidator" ref="esbMessageValidator"/>
		<property name="serviceDestination" value="${extprop.jms.queue.evtDeclaration.output}" />
		<property name="enabled" value="${extprop.jms.queue.evtDeclaration.output.enabled}" />
	</bean>

</beans>
