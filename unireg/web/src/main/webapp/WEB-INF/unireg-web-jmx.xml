<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Read management interface from annotations -->
	<bean id="jmxAttributeSource" class="org.springframework.jmx.export.annotation.AnnotationJmxAttributeSource" />
	<bean id="jmxAssembler" class="org.springframework.jmx.export.assembler.MetadataMBeanInfoAssembler">
		<property name="attributeSource" ref="jmxAttributeSource" />
	</bean>

	<!--
		   Object name is built from annotations (@ManagedResource), then
		   fallbacked to bean key
	   -->
	<bean id="jmxNamingStrategy" class="org.springframework.jmx.export.naming.MetadataNamingStrategy">
		<property name="attributeSource" ref="jmxAttributeSource" />
	</bean>

	<!-- Liste des beans exportés en JMX au travers de leurs annotations -->
	<bean id="jmxExporter" class="org.springframework.jmx.export.MBeanExporter">
		<property name="autodetect" value="false" />
		<property name="assembler" ref="jmxAssembler" />
		<property name="beans">
			<map>
				<entry key="ch.vd.uniregctb-web:type=Monitoring,name=Application" value-ref="applicationMonitoringJmxBean" />
				<entry key="ch.vd.uniregctb-web:type=Monitoring,name=Caches" value-ref="uniregCacheManager" />
				<entry key="ch.vd.uniregctb-web:type=Monitoring,name=Jobs" value-ref="batchScheduler" />
				<entry key="ch.vd.uniregctb-web:type=Monitoring,name=EvenementsCivils" value-ref="evenementsCivilsEchJmxBean" />
				<entry key="ch.vd.uniregctb-web:type=Monitoring,name=EvenementsOrganisation" value-ref="evenementsOrganisationJmxBean" />
				<entry key="ch.vd.uniregctb-web:type=Monitoring,name=RetourImpression" value-ref="retourImpressionJmxBean" />
				<entry key="ch.vd.uniregctb-web:type=Monitoring,name=IndexationOnTheFly" value-ref="onTheFlyTiersIndexerJmxBean"/>
				<entry key="ch.vd.uniregctb-web:type=Monitoring,name=ExtractionsAsynchrones" value-ref="extractionServiceJmxBean" />
				<entry key="ch.vd.uniregctb-web:type=Monitoring,name=AccessLoad" value-ref="webAccessLoadJmxBean" />
				<entry key="ch.vd.uniregctb-web:type=Connections,name=Oracle" value-ref="oracleConnectionJmxBean" />
				<entry key="ch.vd.uniregctb-web:type=Connections,name=IfoSec" value-ref="ifoSecConnectionJmxBean" />
				<entry key="ch.vd.uniregctb-web:type=Connections,name=NexusRemoting" value-ref="nexusRemoteConnectionJmxBean" />
				<entry key="ch.vd.uniregctb-web:type=Properties,name=Preferences" value-ref="preferencesPropertiesJmxBean" />
				<entry key="ch.vd.uniregctb-web:type=Properties,name=Others" value-ref="othersPropertiesJmxBean" />
			</map>
		</property>
	</bean>

	<!-- Liste des beans containers de message listeners exportés par JMX -->
	<bean id="jmxEndpointManagerExporter" class="org.springframework.jmx.export.MBeanExporter">
		<property name="autodetect" value="false"/>
		<property name="assembler" ref="jmxMessageEndpointManagerAssembler"/>
		<property name="beans">
			<map>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=EvenementsCivilsMasse" value-ref="evtCivilEchMasseListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=EvenementsCivilsIndividuel" value-ref="evtCivilEchIndividuelListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=RetourImpression" value-ref="evenementEditiqueListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=EvenementsExternes" value-ref="evenementExterneListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=EvenementsRetourDI" value-ref="evenementRetourDiListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=Identification" value-ref="identCtbMessageListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=IdentificationOnline" value-ref="identCtbMessageListenerOnline"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=EvenementsIAM" value-ref="evenementIamListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=PartyRequests" value-ref="partyRequestListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=RapportTravailRequests" value-ref="rapportTravailRequestListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=EvenementsDeclaration" value-ref="evenementDeclarationListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=EvenementsEfacture" value-ref="evenementEfactureListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=EvenementsEfactureResponse" value-ref="eFactureResponseListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=ReqDes" value-ref="reqdesEventListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=EvenementsOrganisation" value-ref="evtOrganisationListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=RapportAnnonceIDE" value-ref="evenementRapportAnnonceIDEJmsListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=EvenementsImportRf" value-ref="evtRFImportEventListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=EvenementsRapprochementRf" value-ref="evtIdentificationRapprochementRFListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=RetourQuittanceAnnonceDocumentSortant" value-ref="retourDocumentSortantListener"/>
				<entry key="ch.vd.uniregctb-web:type=JmsListeners,name=EvenementsIntegrationMetier" value-ref="evenementIntegrationMetierListener"/>
			</map>
		</property>
	</bean>

	<bean id="jmxMessageEndpointManagerAssembler" class="org.springframework.jmx.export.assembler.InterfaceBasedMBeanInfoAssembler">
		<property name="managedInterfaces">
			<list>
				<value>org.springframework.context.Lifecycle</value>
				<value>ch.vd.uniregctb.jms.MessageListenerContainerJmxInterface</value>
			</list>
		</property>
	</bean>

	<!-- bean qui exporte les contenus des inboxes par JMX -->
	<bean id="inboxContentJmxBeanContainer" class="ch.vd.uniregctb.jmx.InboxContentJmxBeanContainer">
		<property name="inboxService" ref="inboxService"/>
		<property name="exporter" ref="jmxExporter"/>
		<property name="objectNamePrefix" value="ch.vd.uniregctb-web:type=Monitoring,resourceName=Inboxes,name="/>
	</bean>

	<bean id="statsJmxBeanContainer" class="ch.vd.uniregctb.stats.JmxStatContainer">
		<property name="exporter" ref="jmxExporter"/>
		<property name="statsService" ref="statsService"/>
		<property name="objectName" value="ch.vd.uniregctb-web:type=Monitoring,name=Performances"/>
	</bean>

	<bean name="applicationMonitoringJmxBean" class="ch.vd.uniregctb.jmx.ApplicationMonitoringJMXBeanImpl">
		<property name="checker" ref="applicationChecker" />
	</bean>

	<bean name="oracleConnectionJmxBean" class="ch.vd.registre.jmx.ConnectionJmxBeanImpl">
		<constructor-arg ref="dataSource" />
	</bean>

	<bean name="ifoSecConnectionJmxBean" class="ch.vd.registre.jmx.ConnectionJmxBeanImpl">
		<constructor-arg>
			<bean class="ch.vd.unireg.wsclient.WebClientPoolConnectionAdapter">
				<constructor-arg ref="ifoSecWebClientPool" />
			</bean>
		</constructor-arg>
	</bean>

	<bean name="nexusRemoteConnectionJmxBean" class="ch.vd.registre.jmx.ConnectionJmxBeanImpl">
		<constructor-arg>
			<bean class="ch.vd.unireg.servlet.remoting.CommonsHttpInvokerRequestExecutorConnectionAdapter ">
				<constructor-arg ref="nexusHttpRequestExecutor" />
			</bean>
		</constructor-arg>
	</bean>

	<bean name="preferencesPropertiesJmxBean" class="ch.vd.registre.jmx.PropertiesJmxBeanImpl">
		<constructor-arg ref="uniregExternalProperties" />
		<constructor-arg><bean class="ch.vd.uniregctb.utils.UniregProperties$UniregPropertiesAdapterFactoryBean"/></constructor-arg>
	</bean>

	<bean name="evenementsCivilsEchJmxBean" class="ch.vd.uniregctb.jmx.EvenementsCivilsEchJmxBeanImpl">
		<property name="monitor" ref="evtCivilEchReceptionHandler"/>
		<property name="processor" ref="evtCivilEchProcessor"/>
	</bean>

	<bean name="evenementsOrganisationJmxBean" class="ch.vd.uniregctb.jmx.EvenementsOrganisationJmxBeanImpl">
		<property name="monitor" ref="evtOrganisationReceptionHandler"/>
		<property name="processor" ref="evtOrganisationProcessor"/>
		<property name="cappingSwitch" ref="evenementOrganisationTraitementCapping"/>
	</bean>

	<bean name="retourImpressionJmxBean" class="ch.vd.uniregctb.jmx.RetourImpressionJmxBeanImpl">
		<property name="storageService" ref="retourImpressionStorageService"/>
		<property name="callerTimeout" value="${editique.locale.sync.attente.timeout}"/>
		<property name="delayedDownloadService" ref="delayedDownloadService"/>
	</bean>

	<bean name="extractionServiceJmxBean" class="ch.vd.uniregctb.jmx.ExtractionServiceJmxBeanImpl">
		<property name="extractionService" ref="extractionService"/>
	</bean>

	<bean name="onTheFlyTiersIndexerJmxBean" class="ch.vd.uniregctb.jmx.OnTheFlyTiersIndexerJmxBeanImpl">
		<property name="globalTiersIndexer" ref="globalTiersIndexer"/>
	</bean>

	<bean name="othersPropertiesJmxBean" class="ch.vd.registre.jmx.PropertiesJmxBeanImpl">
		<constructor-arg>
			<map>
				<entry key="applicationVersion" value="${project.version}" />
				<entry key="encoding" value="${file.encoding}" />
				<entry key="java_vm_vendor" value="${java.vm.vendor}" />
				<entry key="java_vm_name" value="${java.vm.name}" />
				<entry key="java_specification_version" value="${java.specification.version}" />
				<entry key="os_arch" value="${os.arch}" />
				<entry key="os_name" value="${os.name}" />
				<entry key="os_version" value="${os.version}" />
			</map>
		</constructor-arg>
	</bean>

	<bean name="webAccessLoadJmxBean" class="ch.vd.uniregctb.load.DetailedLoadJmxBeanImpl">
		<constructor-arg name="serviceName" value="WebAccess"/>
		<constructor-arg name="service" ref="accessLoggerFilter"/>
		<constructor-arg name="statsService" ref="statsService"/>
	</bean>

	<bean name="jmsAccessLoadJmxBean" class="ch.vd.uniregctb.jmx.ServiceLoadJmxBeanContainer">
		<property name="statsService" ref="statsService"/>
		<property name="exporter" ref="jmxExporter"/>
		<property name="objectNamePrefix" value="ch.vd.uniregctb-web:type=Monitoring,resourceName=JmsLoad,name="/>
		<property name="services">
			<map>
				<entry key="EvenementsCivilsMasse" value-ref="evtCivilEchMasseListener"/>
				<entry key="EvenementsCivilsIndividuel" value-ref="evtCivilEchIndividuelListener"/>
				<entry key="RetourImpression" value-ref="evenementEditiqueListener"/>
				<entry key="EvenementsExternes" value-ref="evenementExterneListener"/>
				<entry key="EvenementsRetourDI" value-ref="evenementRetourDiListener"/>
				<entry key="Identification" value-ref="identCtbMessageListener"/>
				<entry key="IdentificationOnline" value-ref="identCtbMessageListenerOnline"/>
				<entry key="EvenementsIAM" value-ref="evenementIamListener"/>
				<entry key="PartyRequests" value-ref="partyRequestListener"/>
				<entry key="RapportTravailRequests" value-ref="rapportTravailRequestListener"/>
				<entry key="EvenementsDeclaration" value-ref="evenementDeclarationListener"/>
				<entry key="EvenementsEfacture" value-ref="evenementEfactureListener"/>
				<entry key="EvenementsEfactureResponse" value-ref="eFactureResponseListener"/>
				<entry key="ReqDes" value-ref="reqdesEventListener"/>
				<entry key="EvenementsOrganisation" value-ref="evtOrganisationListener"/>
				<entry key="RapportAnnonceIDE" value-ref="evenementRapportAnnonceIDEJmsListener"/>
				<entry key="EvenementsImportRf" value-ref="evtRFImportEventListener"/>
				<entry key="EvenementsRapprochementRf" value-ref="evtIdentificationRapprochementRFListener"/>
				<entry key="RetourQuittancementAnnonceDocumentSortant" value-ref="retourDocumentSortantListener"/>
				<entry key="EvenementsIntegrationMetier" value-ref="evenementIntegrationMetierListener"/>
			</map>
		</property>
	</bean>

</beans>
