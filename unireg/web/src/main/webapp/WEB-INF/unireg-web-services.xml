<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!-- File based -->
	<bean id="fileGlobalIndexDirectory" class="ch.vd.uniregctb.indexer.fs.FSDirectoryProvider" lazy-init="true">
		<constructor-arg value="${extprop.indexer.globalIndexPath}" />
	</bean>

	<bean id="docService" class="ch.vd.uniregctb.document.DocumentServiceImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
		<property name="repository" value="${extprop.documents.repository}" />
	</bean>

	<bean id="servletService" class="ch.vd.uniregctb.servlet.ServletServiceImpl">
	</bean>

</beans>
