<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="separationListController" class="ch.vd.uniregctb.separation.SeparationListController" parent="abstractTiersListController">
		<property name="sessionForm" value="true" />
		<property name="commandClass" value="ch.vd.uniregctb.tiers.view.TiersCriteriaView" />
		<property name="commandName" value="command" />
		<property name="formView" value="tiers/edition/separation/list" />
		<property name="successView" value="list.do" />
		<property name="validator" ref="tiersCriteriaValidator" />
		<property name="separationRecapManager" ref="separationRecapManager" />
	</bean>

	<bean id="separationRecapController" class="ch.vd.uniregctb.separation.SeparationRecapController" parent="abstractSimpleFormController">
		<property name="sessionForm" value="true" />
		<property name="commandClass" value="ch.vd.uniregctb.separation.view.SeparationRecapView" />
		<property name="commandName" value="command" />
		<property name="formView" value="tiers/edition/separation/recap" />
		<property name="successView" value="/tiers/edit.do" />
		<property name="separationRecapManager" ref="separationRecapManager" />
		<property name="validator" ref="separationRecapValidator" />
	</bean>
	
	<bean id="separationRecapManager" class="ch.vd.uniregctb.separation.manager.SeparationRecapManagerImpl"  >
		<property name="tiersService" ref="tiersService" />
		<property name="metierService" ref="metierService" />
		<property name="tiersGeneralManager" ref="tiersGeneralManager" />
	</bean>

	<bean id="separationRecapValidator" class="ch.vd.uniregctb.separation.validator.SeparationRecapValidator" >
		<property name="tiersService" ref="tiersService" />
		<property name="metierService" ref="metierService" />
	</bean>

	<bean id="annulationSeparationListController" class="ch.vd.uniregctb.annulation.separation.AnnulationSeparationListController" parent="abstractTiersListController">
		<property name="sessionForm" value="true" />
		<property name="commandClass" value="ch.vd.uniregctb.tiers.view.TiersCriteriaView" />
		<property name="commandName" value="command" />
		<property name="formView" value="annulation/separation/list" />
		<property name="successView" value="list.do" />
		<property name="validator" ref="tiersCriteriaValidator" />
		<property name="annulationSeparationRecapManager" ref="annulationSeparationRecapManager" />
	</bean>

	<bean id="annulationSeparationRecapController" class="ch.vd.uniregctb.annulation.separation.AnnulationSeparationRecapController" parent="abstractSimpleFormController">
		<property name="sessionForm" value="true" />
		<property name="commandClass" value="ch.vd.uniregctb.annulation.separation.view.AnnulationSeparationRecapView" />
		<property name="commandName" value="command" />
		<property name="annulationSeparationRecapManager" ref="annulationSeparationRecapManager" />
		<property name="formView" value="annulation/separation/recap" />
		<property name="successView" value="/tiers/edit.do" />
	</bean>
	
	<bean id="annulationSeparationRecapManager" class="ch.vd.uniregctb.annulation.separation.manager.AnnulationSeparationRecapManagerImpl"  >
		<property name="metierService" ref="metierService" />
		<property name="tiersService" ref="tiersService" />
		<property name="tiersGeneralManager" ref="tiersGeneralManager" />
	</bean>

</beans>
