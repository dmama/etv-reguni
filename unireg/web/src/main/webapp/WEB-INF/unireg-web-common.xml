<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Multipart Resolver, necessaire pour l'upload de fichier -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="20485760" />
	</bean>

	<!-- Message source: Le .properties utilisé pour les messages dans les JSP et servlet -->
	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>classpath:UniregLabelResources</value>
				<value>classpath:UniregOptionResources</value>
				<value>classpath:UniregButtonResources</value>
				<value>classpath:UniregErrorResources</value>
			</list>
		</property>
		<property name="defaultEncoding" value="UTF-8" />
		<property name="useCodeAsDefaultMessage" value="true" />
	</bean>

	<!-- pool de threads à disposition des contrôleurs et des managers web -->
	<bean id="webThreadPool" class="org.springframework.scheduling.concurrent.ThreadPoolExecutorFactoryBean">
		<property name="corePoolSize" value="5"/> <!-- nombre minimum de threads -->
		<property name="maxPoolSize" value="10"/> <!-- nombre maximum de threads -->
	</bean>

	<bean id="openSessionInViewInterceptor" class="org.springframework.orm.hibernate4.support.OpenSessionInViewInterceptor">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="errorsController" class="ch.vd.uniregctb.errors.ErrorsController" />

	<bean id="indexController" class="ch.vd.uniregctb.IndexController" />

	<bean id="oidController" class="ch.vd.uniregctb.security.ChooseOIDController">
		<property name="serviceSecurite" ref="serviceSecuriteService" />
	</bean>

	<bean id="authenticationController" class="ch.vd.uniregctb.security.AuthenticationController" />

	<bean id="logoutController" class="ch.vd.uniregctb.LogoutController">
		<property name="uniregProperties" ref="uniregExternalProperties" />
	</bean>

	<bean class="ch.vd.uniregctb.about.AboutController"/>

	<!-- View Resolver -->
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>


	<bean id="webCivilService" class="ch.vd.uniregctb.individu.WebCivilServiceImpl">
		<property name="serviceCivilService" ref="serviceCivilService" />
	</bean>

	<bean id="entrepriseService" class="ch.vd.uniregctb.entreprise.EntrepriseServiceImpl">
		<property name="serviceOrganisationService" ref="serviceOrganisationService" />
		<property name="tiersService" ref="tiersService" />
	</bean>

	<bean id="abstractSimpleFormController" abstract="true" class="ch.vd.uniregctb.common.AbstractSimpleFormController">
		<property name="controllerUtils" ref="controllerUtils"/>
	</bean>

	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="smtp.vd.ch" />
	</bean>

	<bean id="httpDocumentFetcherRaw" class="ch.vd.uniregctb.common.HttpDocumentFetcherImpl"/>
	<bean id="httpDocumentFetcherTracing" class="ch.vd.uniregctb.common.HttpDocumentFetcherTracing">
		<property name="statsService" ref="statsService"/>
		<property name="target" ref="httpDocumentFetcherRaw"/>
	</bean>
	<alias alias="httpDocumentFetcher" name="httpDocumentFetcherTracing"/>

	<!-- this is a template message that we can pre-load with default state -->
	<bean id="templateMessage" class="org.springframework.mail.SimpleMailMessage">
		<property name="to" value="${extprop.exception.notification.email}" />
		<property name="from" value="unireg-application@vd.ch" />
		<property name="subject" value="Une exception est survenue sur Unireg ${project.version}" />
	</bean>

	<bean id="emailNotificationService" class="ch.vd.uniregctb.common.EmailNotificationService">
		<constructor-arg ref="mailSender" />
		<constructor-arg ref="templateMessage" />
	</bean>

	<bean id="jspTagInfra" class="ch.vd.uniregctb.taglibs.JspTagInfra">
		<property name="service" ref="serviceInfrastructureService" />
	</bean>

	<bean id="jspTagDatedInfra" class="ch.vd.uniregctb.taglibs.JspTagDatedInfraBean">
		<property name="service" ref="serviceInfrastructureService" />
	</bean>

	<bean id="jspTagBatchForm" class="ch.vd.uniregctb.taglibs.JspTagBatchForm">
		<property name="securityProvider" ref="securityProviderInterface" />
	</bean>

	<bean id="jspTagInfraEditor" class="ch.vd.uniregctb.taglibs.formInput.InfrastructureEditor">
		<constructor-arg>
			<null />
		</constructor-arg>
		<property name="service" ref="serviceInfrastructureService" />
	</bean>

	<bean id="jspTagLocaliation" class="ch.vd.uniregctb.taglibs.JspTagLocalisation">
		<property name="service" ref="serviceInfrastructureService" />
	</bean>

	<bean id="jspTagRaccourci" class="ch.vd.uniregctb.taglibs.JspTagRaccourci">
	</bean>

	<bean id="jspTagToggleAffichage" class="ch.vd.uniregctb.taglibs.JspTagToggleAffichage" />

	<bean id="jspTagBandeauContribuable" class="ch.vd.uniregctb.taglibs.JspTagBandeauTiers">
		<property name="tiersDAO" ref="tiersDAO" />
		<property name="tiersService" ref="tiersService" />
		<property name="adresseService" ref="adresseService" />
		<property name="transactionManager" ref="transactionManager" />
		<property name="securityProvider" ref="securityProviderInterface"/>
		<property name="avatarService" ref="avatarService"/>
		<property name="fourreNeutreService" ref="fourreNeutreService" />


	</bean>

	<bean id="jspTagAdresseMandataire" class="ch.vd.uniregctb.taglibs.JspTagAdresseMandataire">
		<property name="adresseService" ref="adresseService"/>
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
		<property name="infraService" ref="serviceInfrastructureService"/>
		<property name="transactionManager" ref="transactionManager"/>
	</bean>

	<bean id="jspTagInteroperabilite" class="ch.vd.uniregctb.taglibs.JspTagInteroperabilite"/>

	<bean id="jspTagSetAutorisations" class="ch.vd.uniregctb.taglibs.JspTagSetAutorisations">
		<property name="cache" ref="autorisationCache"/>
	</bean>

	<bean id="printPCLManager" class="ch.vd.uniregctb.print.PrintPCLManagerImpl">
		<property name="localApp" value="${extprop.editique.localapp}" />
	</bean>

	<bean id="validatorHelper" class="ch.vd.uniregctb.common.ValidatorHelperImpl">
		<property name="tiersService" ref="tiersService" />
		<property name="situationFamilleService" ref="situationFamilleService" />
	</bean>

	<bean id="retourEditiqueControllerHelper" class="ch.vd.uniregctb.common.RetourEditiqueControllerHelperImpl">
		<property name="downloadService" ref="editiqueDownloadService"/>
		<property name="delayedDownloadService" ref="delayedDownloadService"/>
	</bean>

	<bean id="delaiController" class="ch.vd.uniregctb.delai.DelaiController">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
		<property name="controllerUtils" ref="controllerUtils"/>
		<property name="securityProvider" ref="securityProviderInterface"/>
		<property name="messageSource" ref="messageSource"/>
	</bean>

	<bean id="copieConformeController" class="ch.vd.uniregctb.copieConforme.CopieConformeController">
		<property name="helper" ref="retourEditiqueControllerHelper" />
		<property name="copieConformeManager" ref="copieConformeManager" />
	</bean>

	<bean id="copieConformeManager" class="ch.vd.uniregctb.copieConforme.CopieConformeManagerImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
		<property name="diService" ref="diService"/>
		<property name="lrService" ref="lrService"/>
		<property name="qsncService" ref="qsncService"/>
		<property name="autreDocumentFiscalService" ref="autreDocumentFiscalService"/>
		<property name="editiqueService" ref="editiqueService"/>
	</bean>

	<bean id="controllerUtils" class="ch.vd.uniregctb.common.ControllerUtilsImpl">
		<property name="securityProvider" ref="securityProviderInterface"/>
		<property name="tiersService" ref="tiersService" />
		<property name="autorisationManager" ref="autorisationManager"/>
	</bean>

	<bean id="searchCriteriaRemovalController" class="ch.vd.uniregctb.common.SearchCriteriaRemovalController"/>

</beans>
