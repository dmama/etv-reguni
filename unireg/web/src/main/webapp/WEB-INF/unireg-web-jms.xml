<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="jmsConnectionFactory" class="org.apache.activemq.pool.XaPooledConnectionFactory" init-method="start" destroy-method="stop">
		<property name="connectionFactory">
			<bean class="org.apache.activemq.ActiveMQConnectionFactory">
				<property name="brokerURL" value="${extprop.esb.jms.url}" />
				<property name="userName" value="${extprop.esb.jms.username}" />
				<property name="password" value="${extprop.esb.jms.password}" />
			</bean>
		</property>
		<property name="maxConnections" value="20"/>
		<property name="transactionManager" ref="transactionManager" />
	</bean>

	<bean id="jmsResourceAdapter" class="org.springframework.jca.support.ResourceAdapterFactoryBean">
		<property name="resourceAdapter">
			<bean class="org.apache.activemq.ra.ActiveMQResourceAdapter">
				<property name="serverUrl" value="${extprop.esb.jms.url}" />
				<property name="userName" value="${extprop.esb.jms.username}" />
				<property name="password" value="${extprop.esb.jms.password}" />
			</bean>
		</property>
		<property name="workManager">
			<bean class="org.springframework.jca.work.SimpleTaskWorkManager"/>
		</property>
	</bean>

	<bean id="esbJmsTemplate" class="ch.vd.uniregctb.jms.EsbTemplateTracing" lazy-init="true">
		<property name="connectionFactory" ref="jmsConnectionFactory" />
		<property name="esbStore" ref="raftEsbStore" />
		<property name="receiveTimeout" value="1000" />
		<property name="statsService" ref="jmsStatsService" />
		<property name="application" value="unireg" />
		<property name="domain" value="fiscalite"/>
	</bean>

	<!-- Versions 'hors-transaction' de l'ESB template + JMS template -->
	<bean id="noTxConnectionFactory" class="org.apache.activemq.pool.PooledConnectionFactory" init-method="start" destroy-method="stop">
		<property name="connectionFactory">
			<bean class="org.apache.activemq.ActiveMQConnectionFactory">
				<property name="brokerURL" value="${extprop.esb.jms.url}" />
				<property name="userName" value="${extprop.esb.jms.username}" />
				<property name="password" value="${extprop.esb.jms.password}" />
			</bean>
		</property>
		<property name="maxConnections" value="8"/>
	</bean>

	<bean id="noTxEsbJmsTemplate" class="ch.vd.uniregctb.jms.EsbTemplateTracing" lazy-init="true">
		<property name="connectionFactory" ref="noTxConnectionFactory" />
		<property name="esbStore" ref="raftEsbStore" />
		<property name="receiveTimeout" value="1000" />
		<property name="statsService" ref="jmsStatsService" />
		<property name="application" value="unireg" />
		<property name="domain" value="fiscalite"/>
	</bean>

	<bean id="raftEsbStore" class="ch.vd.technical.esb.store.raft.RaftEsbStore">
		<property name="endpoint" value="${extprop.esb.raft.store}" />
	</bean>

	<bean id="esbMessageListener" abstract="true" class="ch.vd.technical.esb.jms.EsbMessageListener">
		<property name="esbTemplate" ref="esbJmsTemplate"/>
	</bean>

	<bean id="esbMessageFactory" class="ch.vd.technical.esb.EsbMessageFactory" lazy-init="true">
		<property name="validator" ref="esbMessageFactoryValidator"/>
	</bean>

	<!-- Version sans validation parce que les XSDs de éditique n'ont pas de namespace et que ça bloque à la validation automatique -->
	<!-- Egalement utilisé dans les cas - événements internes - où la validation prend trop de temps par rapport au traitement métier un-->
	<bean id="esbMessageFactorySansValidation" class="ch.vd.technical.esb.EsbMessageFactory"/>

	<bean id="esbHttpTemplate" class="ch.vd.technical.esb.http.EsbHttpTemplate">
		<property name="username" value="${extprop.esb.http.username}" />
		<property name="password" value="${extprop.esb.http.password}" />
		<property name="esbStore" ref="raftEsbStore"/>
		<property name="timeout" value="15000"/>
		<property name="host" value="${extprop.esb.http.host}"/>
		<property name="port" value="${extprop.esb.http.port}"/>
		<property name="application" value="unireg" />
		<property name="domain" value="fiscalite"/>
	</bean>

	<bean id="esbMessageFactoryValidator" class="ch.vd.technical.esb.util.ESBXMLValidator" lazy-init="true">
		<property name="resourceResolver"><bean class="ch.vd.unireg.xml.tools.ClasspathCatalogResolver"/></property>
		<property name="sources">
			<list>
				<value>classpath:xsd/civil/**/*.xsd</value>
				<value>classpath:xsd/database/**/*.xsd</value>
				<value>classpath:xsd/fiscal/evenementFiscalMaster-v1.xsd</value>
				<value>classpath:xsd/fiscal/evtQuittanceListe-v1.xsd</value>
				<value>classpath:xsd/identification/**/*.xsd</value>
				<value>classpath:unireg-common-1.xsd</value>
				<value>classpath:event/di/evenementDeclarationImpot-common-1.xsd</value>
				<value>classpath:event/di/evenementDeclarationImpot-output-1.xsd</value>
			</list>
		</property>
	</bean>

</beans>
