<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Service civil -->

	<bean id="serviceCivilRemote" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/serviceCivil.remoting" />
		<property name="serviceInterface" value="ch.vd.unireg.interfaces.civil.ServiceCivilRaw" />
		<property name="username" value="${extprop.remoting.unireg.username}" />
		<property name="password" value="${extprop.remoting.unireg.password}" />
	</bean>

	<bean id="serviceCivilServiceTracing" class="ch.vd.unireg.interfaces.civil.ServiceCivilTracing">
		<property name="target" ref="serviceCivilRemote" />
		<property name="statsService" ref="statsService" />
	</bean>

	<bean id="serviceCivilServiceCache" class="ch.vd.unireg.interfaces.civil.cache.ServiceCivilCache">
		<property name="target" ref="serviceCivilServiceTracing" />
		<property name="cacheManager" ref="ehCacheManager" />
		<property name="cacheName" value="serviceCivil" />
		<property name="uniregCacheManager" ref="uniregCacheManager" />
		<property name="statsService" ref="statsService" />
		<property name="dataEventService" ref="dataEventService" />
	</bean>

	<alias alias="serviceCivilRaw" name="serviceCivilServiceCache"/>

	<!-- Service infra -->

	<bean id="serviceInfraRemote" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/serviceInfra.remoting" />
		<property name="serviceInterface" value="ch.vd.unireg.interfaces.infra.ServiceInfrastructureRaw" />
		<property name="username" value="${extprop.remoting.unireg.username}" />
		<property name="password" value="${extprop.remoting.unireg.password}" />
	</bean>

	<bean id="serviceInfrastructureTracing" class="ch.vd.unireg.interfaces.infra.ServiceInfrastructureTracing">
		<property name="target" ref="serviceInfraRemote" />
		<property name="statsService" ref="statsService" />
	</bean>

	<bean id="serviceInfrastructureCache" class="ch.vd.unireg.interfaces.infra.cache.ServiceInfrastructureCache">
		<property name="target" ref="serviceInfrastructureTracing" />
		<property name="cacheManager" ref="ehCacheManager" />
		<property name="cacheName" value="serviceInfra" />
		<property name="shortLivedCacheName" value="serviceInfraShortLived" />
		<property name="uniregCacheManager" ref="uniregCacheManager" />
		<property name="statsService" ref="statsService" />
	</bean>

	<alias alias="serviceInfrastructureRaw" name="serviceInfrastructureCache"/>

	<!-- Bean remoteJndiConnection for Host-Interfaces EJBs -->
	<bean id="ejbJndiTemplate" class="ch.vd.uniregctb.utils.UniregJndiTemplate">
		<property name="environment">
			<map>
				<entry key="java.naming.factory.initial" value="${host-interfaces.factory}" />
				<entry key="java.naming.provider.url" value="${extprop.host-interfaces.url}"/>
				<entry key="java.naming.security.principal" value="${extprop.host-interfaces.username}" />
				<entry key="java.naming.security.credentials" value="${extprop.host-interfaces.password}" />
			</map>
		</property>
	</bean>

	<!-- Gestion de la cohérence des données du cache centralisé -->

	<!-- Data Event Service du cache centralisé Nexus -->
	<bean id="nexusDataEventService" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/dataEventService.remoting" />
		<property name="serviceInterface" value="ch.vd.uniregctb.data.DataEventService" />
		<property name="username" value="${extprop.remoting.unireg.username}" />
		<property name="password" value="${extprop.remoting.unireg.password}" />
	</bean>

	<!-- Listener qui permet au cache centralisé Nexus de recevoir les notifications lors des changements sur les individus -->
	<bean id="nexusDataEventListener" class="ch.vd.uniregctb.data.DataEventSlaveServiceListener">
		<property name="master" ref="dataEventService"/>
		<property name="slave" ref="nexusDataEventService"/>
	</bean>

</beans>
