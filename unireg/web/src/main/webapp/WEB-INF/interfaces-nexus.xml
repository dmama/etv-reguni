<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Service civil -->

	<bean id="serviceCivilHttpRequestExecutor" class="ch.vd.unireg.servlet.remoting.GentilHttpInvokerRequestExecutorWithCustomHeaders">
		<constructor-arg value="ServiceCivil"/>
	</bean>

	<bean id="serviceCivilLogger" class="ch.vd.uniregctb.interfaces.civil.ServiceCivilRemoteLogger">
		<property name="executor" ref="serviceCivilHttpRequestExecutor"/>
	</bean>

	<bean id="serviceCivilRemote" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/serviceCivil.remoting" />
		<property name="serviceInterface" value="ch.vd.unireg.interfaces.civil.ServiceCivilRaw" />
		<property name="username" value="${extprop.remoting.unireg.username}" />
		<property name="password" value="${extprop.remoting.unireg.password}" />
		<property name="executor" ref="serviceCivilHttpRequestExecutor" />
		<property name="maxConnectionsPerHost" value="${extprop.remoting.maxConnectionsPerHost}" />
	</bean>

	<bean id="serviceCivilServiceTracing" class="ch.vd.unireg.interfaces.civil.ServiceCivilTracing">
		<property name="target" ref="serviceCivilRemote" />
		<property name="statsService" ref="statsService" />
	</bean>

	<!-- Service Organisation -->

	<bean id="serviceOrganisationHttpRequestExecutor" class="ch.vd.unireg.servlet.remoting.GentilHttpInvokerRequestExecutorWithCustomHeaders">
		<constructor-arg value="ServiceOrganisation"/>
	</bean>

	<bean id="serviceOrganisationRemote" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/serviceOrganisation.remoting" />
		<property name="serviceInterface" value="ch.vd.unireg.interfaces.organisation.ServiceOrganisationRaw" />
		<property name="username" value="${extprop.remoting.unireg.username}" />
		<property name="password" value="${extprop.remoting.unireg.password}" />
		<property name="executor" ref="serviceCivilHttpRequestExecutor" />
		<property name="maxConnectionsPerHost" value="${extprop.remoting.maxConnectionsPerHost}" />
	</bean>


	<bean id="serviceOrganisationTracing" class="ch.vd.unireg.interfaces.organisation.ServiceOrganisationTracing">
		<property name="target" ref="serviceOrganisationRemote" />
		<property name="statsService" ref="statsService" />
	</bean>

	<!-- Service UPI -->

	<bean id="serviceUpiHttpRequestExecutor" class="ch.vd.unireg.servlet.remoting.GentilHttpInvokerRequestExecutor">
		<constructor-arg value="ServiceUpi"/>
	</bean>

	<bean id="serviceUpiRemote" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/serviceUpi.remoting"/>
		<property name="serviceInterface" value="ch.vd.unireg.interfaces.upi.ServiceUpiRaw"/>
		<property name="username" value="${extprop.remoting.unireg.username}"/>
		<property name="password" value="${extprop.remoting.unireg.password}"/>
		<property name="executor" ref="serviceUpiHttpRequestExecutor"/>
		<property name="maxConnectionsPerHost" value="${extprop.remoting.maxConnectionsPerHost}"/>
	</bean>

	<bean id="serviceUpiTracing" class="ch.vd.unireg.interfaces.upi.ServiceUpiTracing">
		<property name="target" ref="serviceUpiRemote"/>
		<property name="statsService" ref="statsService"/>
	</bean>

	<!-- Service infra -->

	<bean id="serviceInfraHttpRequestExecutor" class="ch.vd.unireg.servlet.remoting.GentilHttpInvokerRequestExecutor">
		<constructor-arg value="ServiceInfrastructure"/>
	</bean>

	<bean id="serviceInfraRemote" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/serviceInfra.remoting" />
		<property name="serviceInterface" value="ch.vd.unireg.interfaces.infra.ServiceInfrastructureRaw" />
		<property name="username" value="${extprop.remoting.unireg.username}" />
		<property name="password" value="${extprop.remoting.unireg.password}" />
		<property name="executor" ref="serviceInfraHttpRequestExecutor" />
		<property name="maxConnectionsPerHost" value="${extprop.remoting.maxConnectionsPerHost}" />
	</bean>

	<bean id="serviceInfrastructureTracing" class="ch.vd.unireg.interfaces.infra.ServiceInfrastructureTracing">
		<property name="target" ref="serviceInfraRemote" />
		<property name="statsService" ref="statsService" />
	</bean>

	<!-- Gestion de la cohérence des données du cache centralisé -->

	<bean id="dataEventServiceHttpRequestExecutor" class="ch.vd.unireg.servlet.remoting.GentilHttpInvokerRequestExecutor">
		<constructor-arg value="DataEvent"/>
	</bean>

	<!-- Data Event Service du cache centralisé Nexus -->
	<bean id="nexusDataEventService" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/dataEventService.remoting" />
		<property name="serviceInterface" value="ch.vd.uniregctb.data.CivilDataEventListener"/>
		<property name="username" value="${extprop.remoting.unireg.username}" />
		<property name="password" value="${extprop.remoting.unireg.password}" />
		<property name="executor" ref="dataEventServiceHttpRequestExecutor" />
		<property name="maxConnectionsPerHost" value="${extprop.remoting.maxConnectionsPerHost}" />
	</bean>

	<bean id="nexusDataEventTracing" class="ch.vd.uniregctb.data.CivilDataEventTracing">
		<property name="target" ref="nexusDataEventService"/>
		<property name="statsService" ref="statsService"/>
		<property name="serviceName" value="NexusDataEvent"/>
	</bean>

	<!-- Listener qui permet au cache centralisé Nexus de recevoir les notifications lors des changements sur les individus et les organisations -->
	<bean id="nexusDataEventListener" class="ch.vd.uniregctb.data.CivilDataEventSlaveServiceListener">
		<property name="master" ref="dataEventService"/>
		<property name="slave" ref="nexusDataEventTracing"/>
	</bean>

</beans>
