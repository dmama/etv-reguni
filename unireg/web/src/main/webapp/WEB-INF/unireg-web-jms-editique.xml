<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean name="evenementEditiqueListener" class="ch.vd.uniregctb.jms.GentilEsbMessageEndpointListener" parent="esbMessageListener">
		<property name="handler" ref="evenementEditiqueEsbHandler"/>
	</bean>

	<bean name="evenementEditiqueEsbHandler" class="ch.vd.uniregctb.editique.impl.EvenementEditiqueEsbHandler">
		<property name="storageService" ref="retourImpressionStorageService"/>
	</bean>

	<bean id="evenementEditiqueEndpointManager" class="ch.vd.uniregctb.jms.JmxAwareEsbMessageEndpointManager">
		<property name="resourceAdapter" ref="jmsResourceAdapter"/>
		<property name="activationSpec">
			<bean class="org.apache.activemq.ra.ActiveMQActivationSpec">
				<property name="destination" value="${extprop.jms.queue.editique.input}"/>
				<property name="destinationType" value="javax.jms.Queue"/>
				<property name="maxSessions" value="1"/>
				<property name="maxMessagesPerSessions" value="1"/>
			</bean>
		</property>
		<property name="messageListener" ref="evenementEditiqueListener"/>
		<property name="transactionManager" ref="transactionManager"/>
	</bean>

</beans>
