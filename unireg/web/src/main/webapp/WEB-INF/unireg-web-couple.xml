<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="coupleController" class="ch.vd.uniregctb.couple.CoupleController">
		<property name="coupleManager" ref="coupleManager" />
		<property name="coupleValidator" ref="coupleValidator" />
		<property name="controllerUtils" ref="controllerUtils"/>
		<property name="securityProvider" ref="securityProviderInterface" />
	</bean>

	<bean id="coupleValidator" class="ch.vd.uniregctb.couple.CoupleValidator">
		<property name="tiersDAO" ref="tiersDAO" />
		<property name="tiersService" ref="tiersService" />
		<property name="validatorHelper" ref="validatorHelper" />
		<property name="metierService" ref="metierService" />
		<property name="coupleManager" ref="coupleManager" />
		<property name="securityProvider" ref="securityProviderInterface" />
	</bean>

	<bean id="coupleManager" class="ch.vd.uniregctb.couple.CoupleManagerImpl">
		<property name="tiersDAO" ref="tiersDAO"/>
		<property name="tiersService" ref="tiersService" />
		<property name="metierService" ref="metierService" />
		<property name="droitAccesService" ref="droitAccesService" />
	</bean>

	<bean id="couplePpPickerFilterFactory" class="ch.vd.uniregctb.couple.CouplePpPickerFilterFactory"/>

	<bean id="coupleMcPickerFilterFactory" class="ch.vd.uniregctb.couple.CoupleMcPickerFilterFactory">
		<property name="tiersDAO" ref="tiersDAO"/>
	</bean>

	<bean id="annulationCoupleController" class="ch.vd.uniregctb.annulation.couple.AnnulationCoupleController">
		<property name="tiersService" ref="tiersService"/>
		<property name="messageSource" ref="messageSource"/>
		<property name="controllerUtils" ref="controllerUtils"/>
		<property name="annulationCoupleRecapManager" ref="annulationCoupleRecapManager"/>
		<property name="tiersMapHelper" ref="tiersMapHelper"/>
	</bean>

	<bean id="annulationCoupleRecapManager" class="ch.vd.uniregctb.annulation.couple.manager.AnnulationCoupleRecapManagerImpl"  >
		<property name="metierService" ref="metierService" />
		<property name="tiersService" ref="tiersService" />
		<property name="tiersGeneralManager" ref="tiersGeneralManager" />
	</bean>

</beans>
