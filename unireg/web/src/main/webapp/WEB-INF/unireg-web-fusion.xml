<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="habitantListController" class="ch.vd.uniregctb.fusion.HabitantListController" parent="abstractTiersListController">
		<property name="sessionForm" value="true" />
		<property name="commandClass" value="ch.vd.uniregctb.fusion.view.FusionListView" />
		<property name="commandName" value="command" />
		<property name="formView" value="tiers/edition/fusion/habitant/list" />
		<property name="successView" value="list-habitant.do" />
		<property name="fusionListManager" ref="fusionListManager" />
	</bean>

	<bean id="fusionListManager" class="ch.vd.uniregctb.fusion.manager.FusionListManagerImpl">
		<property name="tiersDAO" ref="tiersDAO" />
		<property name="adresseService" ref="adresseService" />
		<property name="tiersGeneralManager" ref="tiersGeneralManager" />
	</bean>

	<bean id="nonHabitantListController" class="ch.vd.uniregctb.fusion.NonHabitantListController" parent="abstractTiersListController">
		<property name="sessionForm" value="true" />
		<property name="commandClass" value="ch.vd.uniregctb.tiers.view.TiersCriteriaView" />
		<property name="commandName" value="command" />
		<property name="formView" value="tiers/edition/fusion/non-habitant/list" />
		<property name="successView" value="list-non-habitant.do" />
	</bean>

	<bean id="fusionRecapController" class="ch.vd.uniregctb.fusion.FusionRecapController" parent="abstractSimpleFormController">
		<property name="sessionForm" value="true" />
		<property name="commandClass" value="ch.vd.uniregctb.fusion.view.FusionRecapView" />
		<property name="commandName" value="command" />
		<property name="fusionRecapManager" ref="fusionRecapManager" />
		<property name="formView" value="tiers/edition/fusion/recap" />
		<property name="successView" value="/tiers/edit.do" />
	</bean>
	
	<bean id="fusionRecapManager" class="ch.vd.uniregctb.fusion.manager.FusionRecapManagerImpl">
		<property name="tiersGeneralManager" ref="tiersGeneralManager" />
		<property name="tiersService" ref="tiersService" />
		<property name="adresseService" ref="adresseService" />
		<property name="hostCivilService" ref="hostCivilService" />
	</bean>

</beans>
