<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="evenementAdresseListener" class="ch.vd.uniregctb.evenement.adresses.GetAdressesRequestListener" parent="esbMessageListener">
		<property name="tiersDAO" ref="tiersDAO" />
		<property name="esbMessageFactory" ref="esbMessageFactory" />
		<property name="adresseService" ref="adresseService" />
	</bean>

	<bean id="evenementAdresseListenerContainer" class="ch.vd.uniregctb.jms.JmxAwareDefaultMessageListenerContainer">
		<property name="connectionFactory" ref="jmsConnectionFactory" />
		<property name="destinationName" value="${extprop.jms.queue.party.service}" />
		<property name="messageListener" ref="evenementAdresseListener" />
		<property name="transactionManager" ref="transactionManager" />
		<property name="autoStartup" value="${extprop.jms.queue.party.service.enabled}" />
	</bean>

</beans>
