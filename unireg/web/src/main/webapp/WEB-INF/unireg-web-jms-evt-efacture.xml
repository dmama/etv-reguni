<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="evenementEfactureListener" class="ch.vd.uniregctb.efacture.EFactureEventListener" parent="esbMessageListener">
		<property name="handler" ref="efactureEventHandler"/>
	</bean>

	<bean id="evenementEfactureEndpointManager" class="ch.vd.uniregctb.jms.JmxAwareEsbMessageEndpointManager">
		<property name="resourceAdapter" ref="jmsResourceAdapter"/>
		<property name="activationSpec">
			<bean class="org.apache.activemq.ra.ActiveMQActivationSpec">
				<property name="destination" value="${extprop.jms.queue.evtEfacture.input}"/>
				<property name="destinationType" value="javax.jms.Queue"/>
				<property name="maxSessions" value="1"/>
				<property name="maxMessagesPerSessions" value="1"/>
			</bean>
		</property>
		<property name="messageListener" ref="evenementEfactureListener" />
		<property name="transactionManager" ref="transactionManager"/>
		<property name="autoStartup" value="${extprop.jms.queue.evtEfacture.input.enabled}" />
	</bean>

	<bean id="eFactureMessageSender" class="ch.vd.uniregctb.efacture.EFactureMessageSenderImpl">
		<property name="esbTemplate" ref="esbJmsTemplate" />
		<property name="esbMessageFactory" ref="esbMessageFactory"/>
		<property name="serviceDestination" value="${extprop.jms.queue.evtEfacture.output}" />
		<property name="enabled" value="${extprop.jms.queue.evtEfacture.output.enabled}" />
	</bean>

</beans>
