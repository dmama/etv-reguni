<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="reqdesEventListener" class="ch.vd.uniregctb.jms.GentilEsbMessageEndpointListener" parent="esbMessageListener">
		<property name="handler" ref="reqdesEventHandler"/>
	</bean>

	<bean id="reqdesEventHandler" class="ch.vd.uniregctb.evenement.reqdes.reception.ReqDesEventHandler">
		<property name="infraService" ref="serviceInfrastructureService"/>
		<property name="evenementDAO" ref="reqdesEvenementDAO"/>
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="processor" ref="reqdesEventProcessor"/>
	</bean>

	<bean id="reqdesEventEndpointManager" class="ch.vd.uniregctb.jms.JmxAwareEsbMessageEndpointManager">
		<property name="resourceAdapter" ref="jmsResourceAdapter"/>
		<property name="activationSpec">
			<bean class="org.apache.activemq.ra.ActiveMQActivationSpec">
				<property name="destination" value="${extprop.jms.queue.reqdes.event.input}"/>
				<property name="destinationType" value="javax.jms.Queue"/>
				<property name="maxSessions" value="${extprop.jms.queue.reqdes.event.consumers}"/>
				<property name="maxMessagesPerSessions" value="1"/>
			</bean>
		</property>
		<property name="messageListener" ref="reqdesEventListener"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="autoStartup" value="${extprop.jms.queue.reqdes.event.enabled}" />
	</bean>

	<bean id="reqdesEventProcessor" class="ch.vd.uniregctb.evenement.reqdes.engine.EvenementReqDesProcessorImpl">
		<property name="hibernateTemplate" ref="hibernateTemplate"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="uniteTraitementDAO" ref="reqdesUniteTraitementDAO"/>
	</bean>

</beans>
