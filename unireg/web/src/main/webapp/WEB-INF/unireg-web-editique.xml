<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
							http://www.springframework.org/schema/util
							http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<bean id="evenementEditiqueSender" class="ch.vd.uniregctb.editique.impl.EvenementEditiqueSenderImpl">
		<property name="serviceDestination" value="${extprop.jms.queue.editique.output}" />
		<property name="serviceReplyTo" value="${extprop.jms.queue.editique.input}" />
		<property name="esbTemplate" ref="esbJmsTemplate" />
		<property name="noTxEsbTemplate" ref="noTxEsbJmsTemplate" />
		<property name="esbMessageFactory" ref="esbMessageFactorySansValidation" />
	</bean>

	<bean id="retourImpressionStorageService" class="ch.vd.uniregctb.editique.impl.EditiqueRetourImpressionStorageServiceImpl">
		<property name="cleanupPeriod" value="${editique.locale.sync.attente.timeout}" />
		<property name="statsService" ref="statsService" />
	</bean>

	<bean id="editiqueService" class="ch.vd.uniregctb.editique.impl.EditiqueServiceImpl" lazy-init="true">
		<property name="sender" ref="evenementEditiqueSender" />
		<property name="retourImpressionStorage" ref="retourImpressionStorageService" />
		<property name="syncReceiveTimeout" value="${editique.locale.sync.attente.timeout}" />
		<property name="asyncReceiveDelay" value="${editique.locale.async.attente.delai}" />
		<property name="hoursRetourImpressionExpiration" value="${extprop.async.print.expiration.hours}" />
		<property name="copieConformeService" ref="copieConformeService" />
		<property name="inboxService" ref="inboxService" />
	</bean>

	<bean id="copieConformeService" class="ch.vd.uniregctb.editique.impl.EditiqueCopieConformeServiceImpl">
		<property name="esbMessageFactory" ref="esbMessageFactorySansValidation" />
		<property name="esbHttpTemplate" ref="esbHttpTemplate" />
		<property name="editiqueHelper" ref="editiqueHelper" />
		<property name="serviceDestination" value="${extprop.esb.copie.conforme.destination}" />
	</bean>

	<bean id="editiqueCompositionService" class="ch.vd.uniregctb.editique.impl.EditiqueCompositionServiceImpl" lazy-init="true">
		<property name="editiqueService" ref="editiqueService" />
		<property name="impressionDIHelper" ref="impressionDIHelper" />
		<property name="impressionLRHelper" ref="impressionLRHelper" />
		<property name="impressionSommationDIHelper" ref="impressionSommationDIHelper" />
		<property name="impressionSommationLRHelper" ref="impressionSommationLRHelper" />
		<property name="impressionNouveauxDossiersHelper" ref="impressionNouveauxDossiersHelper" />
		<property name="impressionConfirmationDelaiHelper" ref="impressionConfirmationDelaiHelper" />
		<property name="impressionTaxationOfficeHelper" ref="impressionTaxationOfficeHelper" />
		<property name="impressionBordereauMouvementDossierHelper" ref="impressionBordereauMouvementDossierHelper" />
		<property name="serviceSecurite" ref="serviceSecuriteService" />
	</bean>

</beans>
