<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="evenementIamListener" class="ch.vd.uniregctb.jms.GentilEsbMessageEndpointListener" parent="esbMessageListener">
		<property name="handler" ref="evenementIamEsbHandler" />
	</bean>

	<bean id="evenementIamEsbHandler" class="ch.vd.uniregctb.evenement.iam.EvenementIamEsbHandler">
		<property name="handler" ref="evenementIAMService" />
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>

	<bean id="evenementIAMEndpointManager" class="ch.vd.uniregctb.jms.JmxAwareEsbMessageEndpointManager">
		<property name="resourceAdapter" ref="jmsResourceAdapter"/>
		<property name="activationSpec">
			<bean class="org.apache.activemq.ra.ActiveMQActivationSpec">
				<property name="destination" value="${extprop.jms.queue.evtIAM}"/>
				<property name="destinationType" value="javax.jms.Queue"/>
				<property name="maxSessions" value="1"/>
				<property name="maxMessagesPerSessions" value="1"/>
			</bean>
		</property>
		<property name="messageListener" ref="evenementIamListener"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="autoStartup" value="${extprop.jms.queue.evtIAM.enabled}" />
	</bean>

</beans>
