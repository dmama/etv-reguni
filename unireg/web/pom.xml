	<properties>
		<!-- A priori, on met tous le répertoire webapp dans le WAR -->
		<excluded-from-war/>
		<!-- On utilise le web.xml standard (mais celui filtré, quand même) -->
		<webXmlForWar>${project.basedir}/target/classes/WEB-INF/web.xml</webXmlForWar>
	</properties>

	<profiles>
		<profile>
			<!-- Profile qui force la pré-compilation des JSP de l'application web -->
			<id>jspc</id>
			<properties>
				<!-- Pas la peine de mettre les JSP dans le WAR si elles sont précompilées -->
				<excluded-from-war>**/*.jsp</excluded-from-war>
				<!-- On utilise le web.xml qui contient le mapping des JPS compilées -->
				<webXmlForWar>${project.basedir}/target/jspweb.xml</webXmlForWar>
			</properties>
			<build>
				<plugins>
					<!-- Plugin de compilation des JSP -->
					<plugin>
						<groupId>org.jasig.mojo.jspc</groupId>
						<artifactId>jspc-maven-plugin</artifactId>
						<version>2.0.2</version>
						<executions>
							<execution>
								<goals>
									<goal>compile</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<!-- On veut utiliser la version déjà filtrée -->
							<inputWebXml>${project.basedir}/target/classes/WEB-INF/web.xml</inputWebXml>
							<source>1.8</source>
							<target>1.8</target>
							<sources>
								<directory>${project.basedir}/src/main/webapp</directory>
								<includes>
									<include>**/*.jsp</include>
								</includes>
							</sources>
							<trimSpaces>false</trimSpaces>   <!-- Autrement, certains mots se retrouvent collés ensembles -->
							<outputWebXml>${project.basedir}/target/jspweb.xml</outputWebXml>
						</configuration>
						<dependencies>
							<dependency>
								<groupId>org.jasig.mojo.jspc</groupId>
								<artifactId>jspc-compiler-tomcat8</artifactId>
								<version>2.0.2</version>

								<exclusions>
									<exclusion>
										<groupId>org.apache.tomcat</groupId>
										<artifactId>jasper</artifactId>
									</exclusion>
									<exclusion>
										<groupId>org.apache.tomcat</groupId>
										<artifactId>jasper-el</artifactId>
									</exclusion>
									<exclusion>
										<groupId>org.apache.tomcat</groupId>
										<artifactId>jasper-jdt</artifactId>
									</exclusion>
									<exclusion>
										<groupId>org.apache.tomcat</groupId>
										<artifactId>servlet-api</artifactId>
									</exclusion>
									<exclusion>
										<groupId>org.apache.tomcat</groupId>
										<artifactId>jsp-api</artifactId>
									</exclusion>
									<exclusion>
										<groupId>org.apache.tomcat</groupId>
										<artifactId>el-api</artifactId>
									</exclusion>
									<exclusion>
										<groupId>org.apache.tomcat</groupId>
										<artifactId>annotations-api</artifactId>
									</exclusion>
								</exclusions>
							</dependency>
							<dependency>
								<groupId>org.apache.tomcat</groupId>
								<artifactId>tomcat-jasper</artifactId>
								<version>${tomcat.version}</version>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>buildnumber-maven-plugin</artifactId>
				<version>1.4</version>
				<configuration>
					<format>{0,date,yyyy-MM-dd HH:mm:ss}</format>
					<items>
						<item>timestamp</item>
					</items>
				</configuration>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>pl.project13.maven</groupId>
				<artifactId>git-commit-id-plugin</artifactId>
				<version>2.2.3</version>
				<configuration>
					<dotGitDirectory>${project.basedir}/../../.git</dotGitDirectory>
					<generateGitPropertiesFile>false</generateGitPropertiesFile>
					<includeOnlyProperties>
						<includeOnlyProperty>git.commit.id.abbrev</includeOnlyProperty>
					</includeOnlyProperties>
					<commitIdGenerationMode>full</commitIdGenerationMode>
					<abbrevLength>10</abbrevLength>
				</configuration>
				<executions>
					<execution>
						<id>get-the-git-infos</id>
						<phase>validate</phase>
						<goals>
							<goal>revision</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.samaxes.maven</groupId>
				<artifactId>minify-maven-plugin</artifactId>
				<version>1.7.4</version>
				<!-- Fusionne les fichiers CSS et Javascript en un seul pour limiter le nombre de ressource à télécharger -->
				<executions>
					<execution>
						<id>merge-css-x</id>
						<phase>process-resources</phase>
						<configuration>
							<cssSourceDir>css/x</cssSourceDir>
							<cssSourceFiles>
								<cssSourceFile>layout.css</cssSourceFile>
								<cssSourceFile>tabs.css</cssSourceFile>
								<cssSourceFile>tools.css</cssSourceFile>
								<cssSourceFile>displaytag.css</cssSourceFile>
								<cssSourceFile>unireg.css</cssSourceFile>
								<cssSourceFile>tooltip.css</cssSourceFile>
								<cssSourceFile>jquery.jgrowl.css</cssSourceFile>
							</cssSourceFiles>
							<skipMinify>true</skipMinify>
							<cssTargetDir>css/x</cssTargetDir>
							<cssFinalFile>screen-all.css</cssFinalFile>
						</configuration>
						<goals>
							<goal>minify</goal>
						</goals>
					</execution>
					<execution>
						<id>merge-css-print</id>
						<phase>process-resources</phase>
						<configuration>
							<cssSourceDir>css/print</cssSourceDir>
							<cssSourceFiles>
								<cssSourceFile>common.css</cssSourceFile>
								<cssSourceFile>displaytag.css</cssSourceFile>
								<cssSourceFile>layout.css</cssSourceFile>
								<cssSourceFile>tabs.css</cssSourceFile>
								<cssSourceFile>tools.css</cssSourceFile>
								<cssSourceFile>unireg.css</cssSourceFile>
							</cssSourceFiles>
							<skipMinify>true</skipMinify>
							<cssTargetDir>css/print</cssTargetDir>
							<cssFinalFile>print-all.css</cssFinalFile>
						</configuration>
						<goals>
							<goal>minify</goal>
						</goals>
					</execution>
					<execution>
						<id>merge-javascript</id>
						<phase>process-resources</phase>
						<configuration>
							<jsSourceDir>js/original</jsSourceDir>
							<jsSourceFiles>
								<jsSourceFile>jquery.js</jsSourceFile>
								<jsSourceFile>jquery.bgiframe.js</jsSourceFile>
								<jsSourceFile>jquery-ui.js</jsSourceFile>
								<jsSourceFile>jquery.ui.datepicker-fr-CH.js</jsSourceFile>
								<jsSourceFile>jquery.ui.tooltip.js</jsSourceFile>
								<jsSourceFile>jquery.cookie.js</jsSourceFile>
								<jsSourceFile>jquery.timers.js</jsSourceFile>
								<jsSourceFile>jquery.form.js</jsSourceFile>
								<jsSourceFile>jquery.jgrowl.js</jsSourceFile>
							</jsSourceFiles>
							<skipMinify>true</skipMinify>
							<jsTargetDir>js</jsTargetDir>
							<jsFinalFile>jquery-all.js</jsFinalFile>
						</configuration>
						<goals>
							<goal>minify</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<archive>
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
						<manifestEntries>
			             	<Implementation-Build>${buildNumber}</Implementation-Build>
							<Application-Version>${project.version}</Application-Version>
						</manifestEntries>
					</archive>
					<webXml>${webXmlForWar}</webXml>
					<webResources>
						<resource>
							<filtering>true</filtering>
							<directory>${basedir}/src/main/webapp</directory>
							<includes>
								<include>**/*.xml</include>
							</includes>
							<excludes>
								<exclude>**/web.xml</exclude>
							</excludes>
						</resource>
					</webResources>
					<warSourceExcludes>${excluded-from-war}</warSourceExcludes>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<finalName>unireg-web</finalName>
					<descriptors>
						<descriptor>release.xml</descriptor>
					</descriptors>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<version>1.4.8</version>
				<configuration>
					<container>
						<containerId>tomcat8x</containerId>
						<type>remote</type>
					</container>
					<configuration>
						<type>runtime</type>
						<properties>
							<cargo.remote.username>tomcat</cargo.remote.username>
							<cargo.remote.password>tomcat</cargo.remote.password>
							<cargo.remote.uri>http://localhost:8080/manager/text</cargo.remote.uri>
						</properties>
					</configuration>
					<deployables>
						<deployable>
							<groupId>ch.vd.uniregctb</groupId>
							<artifactId>uniregctb-web</artifactId>
							<type>war</type>
							<properties>
								<context>/unireg/web</context>
							</properties>
						</deployable>
					</deployables>
				</configuration>
			</plugin>

			<!-- exclusion du "war" des entités déployées vers nexus -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.7</version>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>

		</plugins>

		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>src/main/webapp</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.xml</include>
					<include>META-INF/MANIFEST.MF</include>
				</includes>
			</resource>
		</resources>

		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
			</testResource>
		</testResources>
	</build>

</project>
