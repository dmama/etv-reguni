<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<!-- POM for Core -->

	<modelVersion>4.0.0</modelVersion>

	<artifactId>uniregctb-core</artifactId>
	<packaging>jar</packaging>

	<parent>
		<groupId>ch.vd.uniregctb</groupId>
		<artifactId>uniregctb</artifactId>
		<!-- BEGIN_LVERSION -->
		<version>7.1.3.1</version>
		<!-- END_LVERSION -->
		<relativePath>../base/pom.xml</relativePath>
	</parent>

	<name>Unireg - Core</name>
	<description>UniregCTB, Le registre unifie de l'Etat de Vaud - Core</description>

	<dependencies>
		<dependency>
			<groupId>${project.parent.groupId}</groupId>
			<artifactId>uniregctb-xmlbeans</artifactId>
			<version>1.55</version>
		</dependency>
		<dependency>
			<groupId>ch.vd.uniregctb</groupId>
			<artifactId>unireg-jaxb2-rcpers</artifactId>
		</dependency>
		<dependency>
			<groupId>ch.vd.uniregctb</groupId>
			<artifactId>unireg-jaxb2-host-interfaces</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-dbcp2</artifactId>
			<version>2.0</version>
		</dependency>
		<dependency>
			<groupId>oracle.jdbc</groupId>
			<artifactId>ojdbc7</artifactId>
			<version>${oracle.version}</version>
			<scope>provided</scope>
			<!-- nécessaire à la classe UniregXAMCF -->
		</dependency>
		<dependency>
			<groupId>org.jencks</groupId>
			<artifactId>jencks</artifactId>
			<version>${jencks.version}</version>
		</dependency>
		<dependency>
			<groupId>ch.vd.registre</groupId>
			<artifactId>shared-ascii-art</artifactId>
			<version>1.0.0</version>
		</dependency>
		<!-- spécifié explicitement la version 2.2.2 de geronimo-connector, parce que la verson 2.1.2
		     tirée par jencks est buggée (le pool de connections ne respecte pas sa taille maximale) -->
		<dependency>
			<groupId>org.apache.geronimo.components</groupId>
			<artifactId>geronimo-connector</artifactId>
			<version>2.2.2</version>
		</dependency>
		<dependency>
			<groupId>org.apache.geronimo.components</groupId>
			<artifactId>geronimo-transaction</artifactId>
			<version>2.2.2</version>
		</dependency>
		<dependency>
			<groupId>org.apache.activemq</groupId>
			<artifactId>activemq-spring</artifactId>
			<version>${activemq.version}</version>
		</dependency>
		<dependency>
			<groupId>org.dbunit</groupId>
			<artifactId>dbunit</artifactId>
			<version>${dbunit.version}</version>
			<exclusions>
				<!--Exclusion de junit-addon (et par transivitivé de xerces) parce que CXF demande une version plus récente (voir http://www.mail-archive.com/users@cxf.apache.org/msg11429.html) -->
				<exclusion>
					<groupId>junit</groupId>
					<artifactId>junit</artifactId>
				</exclusion>
				<exclusion>
					<groupId>junit-addons</groupId>
					<artifactId>junit-addons</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.slf4j</groupId>
					<artifactId>slf4j-api</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.slf4j</groupId>
					<artifactId>slf4j-nop</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.codehaus.jackson</groupId>
			<artifactId>jackson-core-asl</artifactId>
			<version>${jackson.version}</version>
		</dependency>
		<dependency>
			<groupId>org.codehaus.jackson</groupId>
			<artifactId>jackson-mapper-asl</artifactId>
			<version>${jackson.version}</version>
		</dependency>
	</dependencies>

	<build>

		<plugins>
			<!-- Ce plugin permet de packager les classes de src/test/java dans leur propre jar de testing -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.0.2</version>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>

		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
			</testResource>
		</testResources>

	</build>

</project>
