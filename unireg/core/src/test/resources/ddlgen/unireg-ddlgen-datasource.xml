<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!--
		Ce bean permet de résoudre les propriétés de type testprop.xxx lors du
		lancement des tests unitaires. Il est absolument nécessaire au fonctionnement des test !
	-->
	<bean id="propertyConfigurerUT" class="org.springframework.beans.factory.config.PreferencesPlaceholderConfigurer">
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		<property name="ignoreResourceNotFound" value="false" />
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="location" value="file:../base/unireg-ut.properties" />
	</bean>

	<bean id="transactionManager" class="org.jencks.factory.TransactionManagerFactoryBean">
		<!-- [UNIREG-2060] désactivé le log des transactions, parce que de toutes façons les bases ne sont pas configurées pour la reprise automatique des transactions.
		<property name="transactionLogDir" value="target/txlog"/>
		-->
		<property name="defaultTransactionTimeoutSeconds" value="86400"/>
	</bean>

	<bean id="jdbcConnectionManager" class="org.jencks.factory.ConnectionManagerFactoryBean">
		<property name="transaction" value="xa"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="poolMaxSize" value="50"/>
	</bean>
	
	<bean id="dataSource" class="org.jencks.factory.ConnectionFactoryFactoryBean">
		<property name="managedConnectionFactory" ref="jdbcManagedConnectionFactory"/>
		<property name="connectionManager" ref="jdbcConnectionManager"/>
	</bean>

	<bean id="hibernateDialect" class="${oracle.hibernate.dialect}"/>
	
	<!-- Datasource -->
	<bean id="jdbcManagedConnectionFactory" class="ch.vd.uniregctb.datasource.UniregXAMCF">
		<property name="driverType" value="thin" />
		<property name="serverName" value="${testprop.oracle.jdbc.server}" />
		<property name="portNumber" value="${testprop.oracle.jdbc.port}" />
		<property name="databaseName" value="${testprop.oracle.jdbc.instance}" />
		<property name="serviceName" value="${testprop.oracle.jdbc.service}" />
		<property name="userName" value="${testprop.oracle.jdbc.username}" />
		<property name="password" value="${testprop.oracle.jdbc.password}" />
	</bean>

	<!-- Datasource -->
	<bean id="rawDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${oracle.jdbc.driverClassName}" />
		<property name="url" value="${testprop.oracle.jdbc.url}" />
		<property name="username" value="${testprop.oracle.jdbc.username}" />
		<property name="password" value="${testprop.oracle.jdbc.password}" />
	</bean>

</beans>
