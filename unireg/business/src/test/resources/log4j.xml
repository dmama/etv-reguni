<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- log4j config -->

	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<!-- pour éviter de spammer l'output avec les properties à chaque début de test business-it -->
		<param name="Threshold" value="DEBUG" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[ut] %-5p [%d{yyyy-MM-dd HH:mm:ss.SSS}] %c{1}.%M(%L) | %m%n" />
		</layout>
	</appender>

	<appender name="LOGFILE" class="org.apache.log4j.FileAppender">
		<param name="Threshold" value="DEBUG" />
		<param name="File" value="unireg-ut.log"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[ut] %-5p [%d{yyyy-MM-dd HH:mm:ss.SSS}] %c{1}.%M(%L) | %m%n" />
		</layout>
	</appender>

	<logger name="ch.vd.uniregctb">
		<level value="INFO" />
	</logger>

	<logger name="ch.vd.uniregctb.transaction">
		<level value="WARN" />
	</logger>

	<logger name="net.sf.ehcache">
		<level value="ERROR" />
	</logger>

	<logger name="org.hibernate">
		<level value="WARN" />
	</logger>

	<logger name="org.hibernate.SQL">
		<level value="WARN" />
	</logger>

	<root>
		<level value="WARN" />
		<appender-ref ref="LOGFILE" />
		<appender-ref ref="CONSOLE" />
	</root>
</log4j:configuration>
