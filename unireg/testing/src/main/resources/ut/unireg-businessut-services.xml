<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="propertiesLogger" class="ch.vd.uniregctb.common.SpringPropertiesLogger">
		<constructor-arg value="Business - Properties provenant de la config Maven" />
		<property name="properties"
			value="
                | Hibernate dialect       : ${hibernate.dialect}
                | JDBC driver             : ${jdbc.driverClassName}
                | JDBC url                : ${testprop.jdbc.url}
                | UniregCTB DB user       : ${testprop.jdbc.username}
                | DB2 proxy               : ${testprop.db2.proxy}
                | DB2 user                : ${testprop.db2.username}
                | DB2 schema              : ${testprop.db2.schema}
                | Host Interfaces URL     : ${testprop.host-interfaces.url}
                | Host Interfaces user    : ${testprop.host-interfaces.username}
                | Index path UT           : ${testprop.indexer.globalIndexPath}
                | Docs repository UT      : ${testprop.documents.repository}
                " />
	</bean>

	<bean id="evenementFiscalFacade" class="ch.vd.uniregctb.evenement.fiscal.jms.mock.MockEvenementFiscalFacade"></bean>

	<bean id="evenementExterneFacade" class="ch.vd.uniregctb.evenement.externe.mock.MockEvenementExterneFacade">
		<property name="messageListener">
			<bean class="ch.vd.uniregctb.evenement.externe.jms.MessageListener" />
		</property>
		<property name="listenerContainer">
			<bean class="org.easymock.EasyMock"  factory-method="createNiceMock" >
				<constructor-arg>
					<value type="java.lang.Class" >org.springframework.context.Lifecycle</value>
				</constructor-arg>
			</bean>
		</property>
	</bean>

	<!-- File based -->
	<bean id="fileGlobalIndexDirectory" class="ch.vd.uniregctb.indexer.jdbc.FSDirectoryProvider" lazy-init="true">
		<constructor-arg value="${testprop.indexer.globalIndexPath}" />
	</bean>

	<bean id="docService" class="ch.vd.uniregctb.document.DocumentServiceImpl" lazy-init="true">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
		<property name="repository" value="${testprop.documents.repository}" />
	</bean>

	<!-- Override du tache service défini dans unireg-business-service.xml pour éviter de devoir
	ajouter toutes les collectivités administratives (oids) et devoir modifier tous les tests -->
	<bean id="tacheService" class="ch.vd.uniregctb.tache.MockTacheService"/>

</beans>
