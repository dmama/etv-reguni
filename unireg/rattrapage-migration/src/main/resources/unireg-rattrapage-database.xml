<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!-- Audit -->
	<bean id="auditManager" class="ch.vd.uniregctb.audit.AuditManager">
		<property name="auditLineDAO" ref="auditLineDAO" />
		<!-- BEGIN_LVERSION -->
		<property name="appName" value="RattrapageMigration (version 3.5.3h)" />
		<!-- END_LVERSION -->
	</bean>

	<!-- Transaction manager -->

	<bean id="transactionManager" class="org.jencks.factory.TransactionManagerFactoryBean">
		<property name="transactionLogDir" value="target/txlog"/>
		<property name="defaultTransactionTimeoutSeconds" value="86400"/>
	</bean>

	<bean id="jdbcConnectionManager" class="org.jencks.factory.ConnectionManagerFactoryBean">
		<property name="transaction" value="xa"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="poolMaxSize" value="10"/>
	</bean>

	<bean id="realDataSource" class="org.jencks.factory.ConnectionFactoryFactoryBean">
		<property name="managedConnectionFactory" ref="jdbcManagedConnectionFactory"/>
		<property name="connectionManager" ref="jdbcConnectionManager"/>
	</bean>

	<bean id="jdbcManagedConnectionFactory" class="ch.vd.uniregctb.datasource.UniregXAMCF">
		<property name="driverType" value="thin" />
		<property name="serverName" value="${rattrapage.jdbc.server}" />
		<property name="portNumber" value="${rattrapage.jdbc.port}" />
		<property name="databaseName" value="${rattrapage.jdbc.instance}" />
		<property name="userName" value="${rattrapage.jdbc.username}" />
		<property name="password" value="${rattrapage.jdbc.password}" />
	</bean>

	<bean id="dataSource" class="ch.vd.uniregctb.dbutils.DebugDataSource">
		<property name="target" ref="realDataSource" />
		<property name="maxConnections" value="10" />
		<property name="enabled" value="false" />
	</bean>


	<!-- Datasource Oracle UniregCTB -->
	<bean id="rawDataSource" class="ch.vd.uniregctb.datasource.UniregDataSource" destroy-method="close">
		<property name="driverClassName" value="${jdbc.driverClassName}" />
		<property name="url" value="jdbc:oracle:thin:@${rattrapage.jdbc.server}:${rattrapage.jdbc.port}:${rattrapage.jdbc.instance}" />
		<property name="username" value="${rattrapage.jdbc.username}" />
		<property name="password" value="${rattrapage.jdbc.password}" />
		<property name="initialSize" value="4" />
		<!-- 50 Connection max c'est la meme chose que dans Weblogic -->
		<property name="maxActive" value="50" />
		
	</bean>
	

<!-- Datasource pour la DB host DB2 (pour la migration/indexation) -->
	<bean id="hostDataSourceDB2" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">

	</bean>
	
	<!-- hibernateProperties specifiques Ã  cette datasource. -->
	<util:map id="hibernateProperties">
		<entry key="hibernate.connection.autocommit" value="false" />
		<entry key="hibernate.query.factory_class" value="org.hibernate.hql.classic.ClassicQueryTranslatorFactory" />
		<entry key="hibernate.dialect" value="${hibernate.dialect}" />
		<entry key="hibernate.query.substitutions" value="${hibernate.query.substitutions}" />
		<entry key="hibernate.show_sql" value="false" />
		<entry key="hibernate.jdbc.batch_size" value="0" />
		<entry key="hibernate.jdbc.use_streams_for_binary" value="true" />
		<entry key="hibernate.hbm2ddl.auto" value="update" />
	</util:map>
     <bean id="db2Schema" class="java.lang.String">
		
	</bean>
</beans>
