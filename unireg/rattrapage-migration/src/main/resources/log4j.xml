			<param name="levelToMatch" value="INFO" />
		</filter>
		<filter class="org.apache.log4j.varia.DenyAllFilter" />		
	</appender>
	<appender name="RAPPORTDOUBLONFILE" class="org.apache.log4j.FileAppender">		
		<param name="Append" value="false" />
		<param name="File" value="RapportTraitementDoublon.csv" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelMatchFilter">
			<param name="levelToMatch" value="INFO" />
		</filter>
		<filter class="org.apache.log4j.varia.DenyAllFilter" />		
	</appender>
	<appender name="RAPPORTDOUBLONHORSMIGRATION" class="org.apache.log4j.FileAppender">		
		<param name="Append" value="false" />
		<param name="File" value="RapportDoublonHorsMigrationIS.csv" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n" />
