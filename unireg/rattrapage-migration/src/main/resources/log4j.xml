		</filter>
		<filter class="org.apache.log4j.varia.DenyAllFilter" />		
	</appender>
	<logger name="ch.vd.uniregctb">
		<level value="INFO" />
	</logger>
	<logger name="ch.vd.uniregctb.rattrapage">
		<level value="DEBUG" />
	</logger>
	<logger name="ch.vd.uniregctb.rattrapage.sqllog">
		<level value="DEBUG" />
	</logger>
	<logger name="ch.vd.uniregctb.rattrapage.ForManager.Rapport" additivity="false">
		<level value="INFO" />
		<appender-ref ref="RAPPORTCREATIONFORFILE"/>		
	</logger>
	<logger name="ch.vd.uniregctb.rattrapage.ForManager.Error" additivity="false">
		<level value="ERROR" />
		<appender-ref ref="RAPPORTERREURFORFILE"/>		
	</logger>
	<logger name="ch.vd.uniregctb.rattrapage.ForManager.HorsSuisse" additivity="false">
		<level value="INFO" />
		<appender-ref ref="RAPPORTHSFILE"/>		
	</logger>
	<logger name="ch.vd.uniregctb.rattrapage.ForManager.SansAdresse" additivity="false">
		<level value="INFO" />
		<appender-ref ref="RAPPORTSANSADRESSE"/>		
	</logger>
	
	<logger name="ch.vd.uniregctb.rattrapage.ForManager.estSuisse" additivity="false">
		<level value="INFO" />
		<appender-ref ref="RAPPORTSUISSEPERMISC"/>		
	</logger>
	<logger name="ch.vd.uniregctb.rattrapage.ForManager.Decede" additivity="false">
		<level value="INFO" />
		<appender-ref ref="RAPPORTDCD"/>		
	</logger>
	<logger name="ch.vd.uniregctb.rattrapage.ContribuableManager.For" additivity="false">
		<level value="INFO" />
		<appender-ref ref="RAPPORTFORDOUBLON"/>				
	</logger>
	<logger name="ch.vd.uniregctb.rattrapage.ContribuableManager.Rapport" additivity="false">
		<level value="INFO" />
		<appender-ref ref="RAPPORTDOUBLONFILE"/>		
	</logger>
	<logger name="ch.vd.uniregctb.rattrapage.ContribuableManager.HorsMigration" additivity="false">
		<level value="INFO" />
		<appender-ref ref="RAPPORTDOUBLONHORSMIGRATION"/>				
	</logger>
	<logger name="ch.vd.uniregctb.rattrapage.ContribuableManager.Error" additivity="false">
		<level value="ERROR" />
		<appender-ref ref="RAPPORTERREURDOUBLONFILE"/>		
	</logger>
	<logger name="ch.vd.uniregctb.rattrapage.ContribuableManager.Conjoint" additivity="false">
		<level value="INFO" />
		<appender-ref ref="RAPPORTCONJOINTDOUBLONFILE"/>		
	</logger>
	<logger name="net.sf.ehcache">
		<level value="ERROR" />
	</logger>

	<logger name="org.dbunit">
		<level value="INFO" />
	</logger>

	<!-- Suppress success logging from InteractiveAuthenticationSuccessEvent -->
	<logger name="org.acegisecurity">
		<level value="ERROR" />
	</logger>

	<logger name="org.apache">
		<level value="WARN" />
	</logger>

	<logger name="org.hibernate">
		<level value="WARN" />
	</logger>

	<logger name="org.hibernate.SQL">
		<level value="WARN" />
	</logger>

	<logger name="org.springframework">
		<level value="INFO" />
	</logger>


	<root>
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="LOGFILE" />
	</root>

</log4j:configuration>
