<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>Sms gateway</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:/vuta-common.xml
		</param-value>
	</context-param>

	<!--  Les servlets de notre application -->
	<servlet>
		<servlet-name>vutaServlet</servlet-name>
		<servlet-class>ch.vd.vuta.web.MainServlet</servlet-class>
		<load-on-startup>5</load-on-startup>
	</servlet>
	<!--  Mapping entre les servlets et les URLs qu'elles servent -->
	<servlet-mapping>
		<servlet-name>vutaServlet</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<!-- Emplacement du fichier index -->
	<welcome-file-list>
		<welcome-file>index.do</welcome-file>
	</welcome-file-list>

	<!-- Les filters de notre application -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<!--
	<filter>
		<filter-name>RemoteHostFilter</filter-name>
		<filter-class>ch.vd.ati.security.RemoteHostFilter</filter-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>file:${ch.vd.dfin.smsgw.propertyFolder}/smsgw.properties</param-value>
		</init-param>
	</filter>
	-->
	<!-- Mappings entre les filtres et les URLs qu'ils filtrent -->
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>RemoteHostFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!--  La configuration de la session utilisateur -->
	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>
	
	<!-- Les listener de notre application -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	

	<!-- Les pages d'erreurs et code HTTP associÃ©s -->
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/jsp/errors/error.jsp</location>
	</error-page>
	<error-page>
		<error-code>400</error-code>
		<location>/WEB-INF/jsp/index.jsp</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/WEB-INF/jsp/errors/403.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/errors/404.jsp</location>
	</error-page>
</web-app>
