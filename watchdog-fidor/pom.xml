<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<!-- POM for Watchdog-->

	<modelVersion>4.0.0</modelVersion>

	<groupId>ch.vd.watchdog</groupId>
	<artifactId>watchdog</artifactId>
	<version>0.2</version>
	
	<packaging>jar</packaging>

	<name>Watchdog</name>
	<description>Watchdog - Monitoring de Fidor</description>

	<prerequisites>
		<maven>2.0.9</maven>
	</prerequisites>
	
	<build>
		<defaultGoal>install</defaultGoal>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<encoding>UTF-8</encoding>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.14</version>
		</dependency>
		<dependency>
			<groupId>ch.vd.uniregctb</groupId>
			<artifactId>unireg-wsclient-fidor</artifactId>
			<version>2.3.0</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.5</version>
		</dependency>
	</dependencies>

	<!-- ================= Profils utilisateurs ================= -->
	<profiles>

		<!-- ================= Eclipse Developer Profile ================= -->
		<profile>
			<id>eclipse-developer</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-eclipse-plugin</artifactId>
						<version>2.5.1</version>
						<configuration>
							<downloadSources>true</downloadSources>
							<downloadJavadocs>true</downloadJavadocs>
							<wtpversion>2.0</wtpversion>
							<!--
							<wtpversion>1.5</wtpversion>
							-->
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>


		<!-- =================== Environnement profiles -->
		<profile>
			<id>env.dev</id>
			<properties>
				<surefire.useFile>false</surefire.useFile>
				<downloadSources>true</downloadSources>
			</properties>
		</profile>
	</profiles>

	<properties>

		<!-- Application settings -->
		<copyright.year>2011</copyright.year>
		<amp.genericCore>true</amp.genericCore>
		<amp.fullSource>false</amp.fullSource>

	</properties>

</project>
