<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="esbMessageListener" abstract="true" class="ch.vd.technical.esb.jms.EsbMessageListener">
		<property name="esbTemplate" ref="esbJmsTemplate" />
	</bean>

	<bean id="jmsResourceAdapter" class="org.springframework.jca.support.ResourceAdapterFactoryBean">
		<property name="resourceAdapter">
			<bean class="org.apache.activemq.ra.ActiveMQResourceAdapter">
				<property name="serverUrl" ref="brokerURL" />
				<property name="userName" ref="esbUserName" />
				<property name="password" ref="esbPassword" />
			</bean>
		</property>
		<property name="workManager">
			<bean class="org.springframework.jca.work.SimpleTaskWorkManager" />
		</property>
	</bean>

	<bean id="raftEsbStore" class="ch.vd.technical.esb.store.raft.RaftEsbStore">
		<property name="endpoint" ref="raftStoreUrl" />
	</bean>

	<bean id="esbMessageFactory" class="ch.vd.technical.esb.EsbMessageFactory" />

	<bean id="jmsConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
		<property name="brokerURL" ref="brokerURL" />
		<property name="userName" ref="esbUserName" />
		<property name="password" ref="esbPassword" />
	</bean>

	<bean id="esbJmsTemplate" class="ch.vd.technical.esb.jms.EsbJmsTemplate" lazy-init="true">
		<property name="connectionFactory" ref="jmsConnectionFactory" />
		<property name="esbStore" ref="raftEsbStore" />
		<property name="receiveTimeout" value="1000" />
		<property name="application" value="unireg" />
		<property name="domain" value="fiscalite" />
	</bean>

</beans>
