<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
	<!-- Le "Threshold" veut dire qu'il ne va logger que les messages -->
	<!-- "Threshold level" ou plus haut -->
	<param name="Threshold" value="DEBUG" />
	<layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" value="[unireg-print-pcl] %-5p [%d{yyyy-MM-dd HH:mm:ss.SSS}] %c{1}.%M(%L) | %m%n" />
	</layout>
</appender>

<appender name="IN_MEMORY" class="ch.vd.uniregctb.log.RollingInMemoryAppender">
	<param name="MaxLines" value="100" />
	<param name="Threshold" value="DEBUG" />
	<layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" value="[unireg-print-pcl] %-5p [%d{yyyy-MM-dd HH:mm:ss.SSS}] %c{1}.%M(%L) | %m%n" />
	</layout>
</appender>

<appender name="LOGFILE" class="org.apache.log4j.RollingFileAppender">
	<param name="Threshold" value="DEBUG" />
	<param name="Append" value="true" />
	<param name="File" value="PrintPCL.log" />
	<param name="MaxFileSize" value="5000KB" />
	<param name="MaxBackupIndex" value="10" />
	<layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" value="[unireg-print-pcl] %-5p [%d{yyyy-MM-dd HH:mm:ss.SSS}] [%8.8t] %c{1}.%M(%L) | %m%n" />
	</layout>
</appender>

<root>
    <level value="DEBUG" />
    <appender-ref ref="LOGFILE" />
</root>

</log4j:configuration>