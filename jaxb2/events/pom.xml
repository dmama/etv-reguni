<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<artifactId>unireg-jaxb2-events</artifactId>
	<packaging>jar</packaging>

	<parent>
		<groupId>ch.vd.uniregctb</groupId>
		<artifactId>unireg-jaxb2</artifactId>
		<!-- BEGIN_LVERSION -->
		<version>6.0-SNAPSHOT</version>
		<!-- END_LVERSION -->
		<relativePath>../base/pom.xml</relativePath>
	</parent>

	<name>Unireg - Events Beans JAXB2</name>
	<description>Beans JAXB2 qui décrivent les données des événements reçus et envoyés par le projet Unireg</description>

	<dependencies>
		<dependency>
			<groupId>${project.parent.groupId}</groupId>
			<artifactId>unireg-jaxb2-party</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.parent.groupId}</groupId>
			<artifactId>unireg-jaxb2-infra</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>0.8.0</version>
				<configuration>
					<schemaDirectory>src/main/resources</schemaDirectory>
					<catalog>src/main/resources/catalog.xml</catalog>
					<schemaIncludes>
						<include>main.xsd</include>
					</schemaIncludes>
					<bindingDirectory>src/main/resources</bindingDirectory>
					<bindingIncludes>
						<include>common-bindings.xml</include>
						<include>ech-bindings.xml</include>
						<include>party-bindings.xml</include>
						<include>infra-bindings.xml</include>
						<include>bindings.xml</include>
					</bindingIncludes>
					<args>
						<arg>-extension</arg>
						<arg>-Xpretty-classname</arg>
						<arg>-Xpretty-classname-force:ch.vd.unireg.xml.event.lr.event.v1.EvtListeType/EvtListeData</arg>
						<arg>-Xunireg-ws</arg>
						<arg>-Xnamespace-prefix</arg>
						<arg>-Xts</arg>
						<arg>-Xts:style:ch.vd.unireg.UniregToStringStyle.STYLE</arg>
						<arg>-Xvalue-constructor</arg>
						<arg>-Xinheritance</arg>
					</args>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>org.jvnet.jaxb2_commons</groupId>
						<artifactId>jaxb2-namespace-prefix</artifactId>
						<version>${namespace-prefix.version}</version>
					</dependency>
					<dependency>
						<groupId>ch.vd.uniregctb</groupId>
						<artifactId>jaxb2-pretty-classname</artifactId>
						<version>1.2.2</version>
					</dependency>
					<dependency>
						<groupId>ch.vd.uniregctb</groupId>
						<artifactId>jaxb2-unireg-ws-plugin</artifactId>
						<version>1.2.0</version>
					</dependency>
					<dependency>
						<groupId>org.apache.cxf.xjcplugins</groupId>
						<artifactId>cxf-xjc-ts</artifactId>
						<version>2.3.2</version>
					</dependency>
					<dependency>
						<groupId>org.jvnet.jaxb2_commons</groupId>
						<artifactId>jaxb2-value-constructor</artifactId>
						<version>3.0</version>
					</dependency>
					<dependency>
						<groupId>org.jvnet.jaxb2_commons</groupId>
					   <artifactId>jaxb2-basics</artifactId>
					   <version>0.5.3</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<encoding>UTF-8</encoding>
					<source>1.7</source>
					<target>1.7</target>
					<excludes>
						<!-- on exclut les répertoires des beans qui correspondent aux XSDs du projet unireg-jaxb-party, car ils ont déjà été compilés dans ce dernier -->
						<exclude>ch/ech/**</exclude>
						<exclude>ch/vd/unireg/xml/common/**</exclude>
						<exclude>ch/vd/unireg/xml/exception/**</exclude>
						<exclude>ch/vd/unireg/xml/party/**</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.0.4</version>
				<executions>
					<execution>
						<goals>
							<goal>jar</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.4.3</version>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<!-- BEGIN_LVERSION -->
					<finalName>PartyJMSService_6.0-SNAPSHOT</finalName>
					<!-- END_LVERSION -->
					<descriptors>
						<descriptor>release_partyservice.xml</descriptor>
					</descriptors>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>

				<dependencies>
					<dependency>
						<groupId>gr.spinellis</groupId>
						<artifactId>UmlGraph</artifactId>
						<version>4.4</version>
					</dependency>
				</dependencies>

				<executions>
					<!-- Task ANT qui génère la javadoc des classes exposées par le web-service -->
					<execution>
						<id>ws.javadoc</id>
						<goals>
							<goal>run</goal>
						</goals>
						<phase>site</phase>
						<configuration>
							<tasks>
								<property name="compile_classpath" refid="maven.compile.classpath"/>
								<property name="runtime_classpath" refid="maven.runtime.classpath"/>
								<property name="plugin_classpath" refid="maven.plugin.classpath"/>
								<echo message="==> compile_classpath: ${compile_classpath}"/>

								<!-- BEGIN_LVERSION -->
								<javadoc access="public"
										 additionalparam="-encoding 'utf-8' -charset 'utf-8'"
										 author="true"
										 classpath="${compile_classpath}"
										 destdir="target/javadoc"
										 doctitle="Unireg - Documentation du service Jms (3.4)"
										 nodeprecated="false"
										 nodeprecatedlist="false"
										 noindex="false"
										 nonavbar="false"
										 notree="false"
										 source="3.4"
										 splitindex="true"
										 use="true"
										 version="true" >
									<fileset dir="target/generated-sources/xjc/" defaultexcludes="yes">
										<include name="**/*.java"/>
										<exclude name="**/ObjectFactory.java"/>
									</fileset>
									<fileset dir="../common/src/main/java/ch/vd/unireg/xml/common" defaultexcludes="yes">
										<include name="**/*.java"/>
										<exclude name="**/ObjectFactory.java"/>
									</fileset>
								</javadoc>
								<!-- END_LVERSION -->
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>

