<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- log4j config pour les test UT et BIT -->

	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="WARN" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[ut] %-5p [%d{yyyy-MM-dd HH:mm:ss.SSS}] [%8.8t] %c{1}.%M(%L) | %m%n" />
		</layout>
	</appender>

	<appender name="LOGFILE" class="org.apache.log4j.FileAppender">
		<param name="Threshold" value="DEBUG" />
		<param name="Append" value="false" />
		<param name="File" value="unireg-ut.log"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[ut] %-5p [%d{yyyy-MM-dd HH:mm:ss.SSS}] [%8.8t] %c{1}.%M(%L) | %m%n" />
		</layout>
	</appender>

	<logger name="ch.vd.unireg">
		<level value="DEBUG" />
	</logger>

	<logger name="ch.vd.unireg.tiers.TiersHelper">
		<level value="INFO" />
	</logger>

	<!-- Affichage des dÃ©marcation de transactions -->
	<logger name="ch.vd.unireg.transaction">
		<level value="WARN" />
	</logger>

	<logger name="org.springframework">
		<level value="INFO" />
	</logger>

	<logger name="net.sf.ehcache">
		<level value="ERROR" />
	</logger>

	<logger name="org.hibernate.SQL">
		<level value="WARN" />
	</logger>

	<logger name="com.gargoylesoftware.htmlunit.DefaultCssErrorHandler">
		<!-- pour ne pas se faire spammer par les erreurs de parsing des CSS -->
		<level value="ERROR" />
	</logger>

	<!-- Suppress warnings from Commons Validator -->
	<logger name="org.apache.commons.validator.ValidatorResources">
		<level value="ERROR" />
	</logger>


	<root>
		<level value="WARN" />
		<appender-ref ref="LOGFILE" />
		<appender-ref ref="CONSOLE" />
	</root>
</log4j:configuration>
