<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="rapportTravailRequestHandler" class="ch.vd.uniregctb.evenement.rapport.travail.MiseAJourRapportTravailRequestHandler">
		<property name="tiersService" ref="tiersService" />
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>

	<bean id="rapportTravailRequestListener" class="ch.vd.uniregctb.jms.GentilEsbMessageListenerContainer" parent="esbMessageListener">
		<property name="handler" ref="rapportTravailRequestEsbHandler"/>
		<property name="destinationName" value="${extprop.jms.queue.rapportTravail.service}"/>
		<property name="concurrentConsumers" value="1"/>
		<property name="autoStartup" value="${extprop.jms.queue.rapportTravail.service.enabled}" />
		<property name="description" value="RÃ©ception des demandes de modification de rapport de travail"/>
	</bean>

	<bean id="rapportTravailRequestEsbHandler" class="ch.vd.uniregctb.evenement.rapport.travail.RapportTravailRequestEsbHandler">
		<property name="rapportTravailRequestHandler" ref="rapportTravailRequestHandler" />
		<property name="esbTemplate" ref="esbJmsTemplate"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="esbMessageValidatorServiceTracing" ref="esbMessageValidatorServiceTracing"/>
	</bean>

</beans>
