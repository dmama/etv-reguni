<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="applicationChecker" class="ch.vd.uniregctb.checker.ApplicationChecker">
		<property name="version" value="${project.version}" />
		<property name="statusManager" ref="statusManager" />
	</bean>

	<bean id="statusManager" class="ch.vd.shared.statusmanager.StatusManagerImpl">
		<property name="executor">
			<bean class="org.springframework.scheduling.concurrent.ThreadPoolExecutorFactoryBean">
				<property name="corePoolSize" value="2" /><!-- nombre minimal de threads -->
				<property name="maxPoolSize" value="2" /><!-- nombre maximal de threads -->
				<property name="threadNamePrefix" value="WebCheckerExecutor-" />
			</bean>
		</property>
		<property name="criticalCheckers">
			<list>
				<ref bean="serviceCivilChecker" />
				<ref bean="serviceOrganisationChecker" />
				<ref bean="serviceInfraChecker" />
				<ref bean="serviceSecuriteChecker" />
			</list>
		</property>
		<property name="nonCriticalCheckers">
			<list>
				<ref bean="serviceBVRChecker" />
				<ref bean="serviceEFactureChecker" />
			</list>
		</property>
	</bean>

	<bean id="serviceCivilChecker" class="ch.vd.uniregctb.checker.ServiceCivilChecker">
		<property name="serviceCivilRaw" ref="serviceCivilServiceTracing" />
	</bean>

	<bean id="serviceOrganisationChecker" class="ch.vd.uniregctb.checker.ServiceOrganisationChecker">
		<property name="serviceOrganisationRaw" ref="serviceOrganisationTracing" />
	</bean>

	<bean id="serviceInfraChecker" class="ch.vd.uniregctb.checker.ServiceInfraChecker">
		<property name="serviceInfraRaw" ref="serviceInfrastructureTracing" />
	</bean>

	<bean id="serviceSecuriteChecker" class="ch.vd.uniregctb.checker.ServiceSecuriteChecker">
		<property name="serviceSecuriteRaw" ref="serviceSecuriteServiceTracing" />
	</bean>

	<bean id="serviceBVRChecker" class="ch.vd.uniregctb.checker.ServiceBVRChecker">
		<property name="bvrClient" ref="bvrPlusClient" />
	</bean>

	<bean id="serviceEFactureChecker" class="ch.vd.uniregctb.checker.ServiceEFactureChecker">
		<property name="efactureClient" ref="eFactureClient" />
	</bean>

</beans>
