<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Exécuteur HTTP pour tous les appels spring-remoting de Web vers Nexus -->
	<bean id="nexusHttpRequestExecutor" class="ch.vd.unireg.servlet.remoting.UniregHttpInvokerRequestExecutorFactory">
		<property name="serviceName" value="nexus"/>
		<property name="username" value="${extprop.remoting.unireg.nexus.username}" />
		<property name="password" value="${extprop.remoting.unireg.nexus.password}" />
		<property name="maxConnectionsPerRoute" value="${extprop.remoting.unireg.nexus.maxConnectionsPerHost}" />
		<property name="maxTotalConnections" value="${extprop.remoting.unireg.nexus.maxTotalConnections}" />
		<property name="connectTimeout" value="${extprop.remoting.unireg.nexus.connectTimeout:5000}" />
		<property name="connectionRequestTimeout" value="${extprop.remoting.unireg.nexus.connectionRequestTimeout:5000}" />
		<property name="socketTimeout" value="${extprop.remoting.unireg.nexus.socketTimeout:600000}" />
		<property name="braveHttpTracing" ref="braveHttpTracing"/>
		<property name="preAuthHosts">
			<list>
				<!-- active la pré-authentication pour améliorer les performances (= envoi immédiat
					 du username/password plutôt que d'attendre une réponse HTTP 401 du serveur pour le faire) -->
				<value>${extprop.remoting.unireg.nexus.host}</value>
			</list>
		</property>
	</bean>

	<!-- Gestion de la cohérence des données du cache centralisé -->

	<!-- Data Event Service du cache centralisé Nexus -->
	<bean id="nexusDataEventService" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/dataEventService.remoting" />
		<property name="serviceInterface" value="ch.vd.unireg.data.CivilDataEventListener"/>
		<property name="executor" ref="nexusHttpRequestExecutor" />
	</bean>

	<bean id="nexusDataEventTracing" class="ch.vd.unireg.data.CivilDataEventTracing">
		<property name="target" ref="nexusDataEventService"/>
		<property name="statsService" ref="statsService"/>
		<property name="serviceName" value="NexusDataEvent"/>
	</bean>

	<!-- Listener qui permet au cache centralisé Nexus de recevoir les notifications lors des changements sur les individus et les entreprises -->
	<bean id="nexusDataEventListener" class="ch.vd.unireg.data.CivilDataEventSlaveServiceListener">
		<property name="master" ref="dataEventService"/>
		<property name="slave" ref="nexusDataEventTracing"/>
	</bean>

	<!-- Connnecteur individu -->

	<bean id="individuConnectorRemote" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/individuConnector.remoting" />
		<property name="serviceInterface" value="ch.vd.unireg.interfaces.civil.IndividuConnector" />
		<property name="executor" ref="nexusHttpRequestExecutor" />
	</bean>

	<bean id="individuConnectorTracing" class="ch.vd.unireg.interfaces.civil.IndividuConnectorTracing">
		<property name="target" ref="individuConnectorRemote" />
		<property name="statsService" ref="statsService" />
	</bean>

	<bean id="individuConnectorCache" class="ch.vd.unireg.interfaces.civil.cache.IndividuConnectorCache">
		<property name="target" ref="individuConnectorTracing" />
		<property name="cacheManager" ref="ehCacheManager" />
		<property name="cacheName" value="serviceCivil" />
		<property name="uniregCacheManager" ref="uniregCacheManager" />
		<property name="statsService" ref="statsService" />
		<property name="dataEventService" ref="dataEventService" />
	</bean>

	<alias alias="individuConnector" name="individuConnectorCache"/>

	<!-- Service Entreprise -->

	<bean id="serviceEntrepriseRemote" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/serviceEntreprise.remoting" />
		<property name="serviceInterface" value="ch.vd.unireg.interfaces.entreprise.ServiceEntrepriseRaw" />
		<property name="executor" ref="nexusHttpRequestExecutor" />
	</bean>


	<bean id="serviceEntrepriseTracing" class="ch.vd.unireg.interfaces.entreprise.ServiceEntrepriseTracing">
		<property name="target" ref="serviceEntrepriseRemote" />
		<property name="statsService" ref="statsService" />
	</bean>

	<bean id="serviceEntrepriseCache" class="ch.vd.unireg.interfaces.entreprise.cache.ServiceEntrepriseCache">
		<property name="target" ref="serviceEntrepriseTracing" />
		<property name="cacheManager" ref="ehCacheManager" />
		<property name="cacheName" value="serviceEntreprise" />
		<property name="uniregCacheManager" ref="uniregCacheManager" />
		<property name="statsService" ref="statsService" />
		<property name="dataEventService" ref="dataEventService" />
	</bean>

	<alias alias="serviceEntrepriseRaw" name="serviceEntrepriseCache" />

	<!-- Service UPI -->

	<bean id="serviceUpiRemote" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/serviceUpi.remoting"/>
		<property name="serviceInterface" value="ch.vd.unireg.interfaces.upi.ServiceUpiRaw"/>
		<property name="executor" ref="nexusHttpRequestExecutor"/>
	</bean>

	<bean id="serviceUpiTracing" class="ch.vd.unireg.interfaces.upi.ServiceUpiTracing">
		<property name="target" ref="serviceUpiRemote"/>
		<property name="statsService" ref="statsService"/>
	</bean>

	<alias alias="serviceUpiRaw" name="serviceUpiTracing"/>

	<!-- Service infra -->

	<bean id="serviceInfraRemote" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/serviceInfra.remoting" />
		<property name="serviceInterface" value="ch.vd.unireg.interfaces.infra.ServiceInfrastructureRaw" />
		<property name="executor" ref="nexusHttpRequestExecutor" />
	</bean>

	<bean id="serviceInfrastructureTracing" class="ch.vd.unireg.interfaces.infra.ServiceInfrastructureTracing">
		<property name="target" ref="serviceInfraRemote" />
		<property name="statsService" ref="statsService" />
	</bean>

	<bean id="serviceInfrastructureCache" class="ch.vd.unireg.interfaces.infra.cache.ServiceInfrastructureCache">
		<property name="target" ref="serviceInfrastructureTracing" />
		<property name="cacheManager" ref="ehCacheManager" />
		<property name="cacheName" value="serviceInfra" />
		<property name="shortLivedCacheName" value="serviceInfraShortLived" />
		<property name="uniregCacheManager" ref="uniregCacheManager" />
		<property name="statsService" ref="statsService" />
	</bean>

	<alias alias="serviceInfrastructureRaw" name="serviceInfrastructureCache"/>

	<!-- Service REF -Sec -->

	<bean id="refSecClientRemote" class="ch.vd.unireg.servlet.remoting.BasicAuthHttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="${extprop.remoting.unireg.nexus.url}/refSecClient.remoting" />
		<property name="serviceInterface" value="ch.vd.unireg.wsclient.refsec.RefSecClient" />
		<property name="executor" ref="nexusHttpRequestExecutor" />
	</bean>

	<bean id="refSecClientTracing" class="ch.vd.unireg.wsclient.refsec.RefSecClientTracing">
		<property name="target" ref="refSecClientRemote" />
		<property name="statsService" ref="statsService" />
	</bean>
	<alias alias="refSecClient" name="refSecClientTracing" />

</beans>
