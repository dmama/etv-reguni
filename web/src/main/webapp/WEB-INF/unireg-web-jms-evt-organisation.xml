<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Evénements Organisation -->

	<bean id="evtOrganisationListener" class="ch.vd.unireg.jms.GentilEsbMessageListenerContainer" parent="esbMessageListener">
		<property name="handler" ref="evtOrganisationEsbHandler"/>
		<property name="destinationName" value="${extprop.jms.queue.evtOrganisation}"/>
		<property name="concurrentConsumers" value="${extprop.jms.queue.evtOrganisation.consumers}"/>
		<property name="autoStartup" value="${extprop.jms.queue.evtOrganisation.enabled}" />
		<property name="description" value="Réception des évènements en masse provenant du registre des entreprises"/>
	</bean>

	<bean id="evtOrganisationEsbHandler" class="ch.vd.unireg.evenement.organisation.EvenementOrganisationEsbHandler">
		<property name="processingMode" value="BULK"/>
		<property name="receptionHandler" ref="evtOrganisationReceptionHandler"/>
		<property name="ignoredEventTypes">
			<set>
			</set>
		</property>
		<property name="referenceAnnonceIDEDAO" ref="referenceAnnonceIDEDAO" />
	</bean>

	<bean id="evtOrganisationNotificationQueue" class="ch.vd.unireg.evenement.organisation.engine.EvenementOrganisationNotificationQueueImpl">
		<constructor-arg name="delayInSeconds" value="${extprop.evtOrganisation.acknowledgementDelay}"/>
		<property name="evtOrganisationService" ref="evtOrganisationService"/>
		<property name="transactionManager" ref="transactionManager"/>
	</bean>

	<bean id="evtOrganisationReceptionHandler" class="ch.vd.unireg.evenement.organisation.EvenementOrganisationReceptionHandlerImpl">
		<property name="evtOrganisationDAO" ref="evenementOrganisationDAO"/>
		<property name="notificationQueue" ref="evtOrganisationNotificationQueue"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="statsService" ref="statsService" />
	</bean>

	<bean id="evtOrganisationProcessor" class="ch.vd.unireg.evenement.organisation.engine.processor.EvenementOrganisationProcessorFacade">
		<property name="notificationQueue" ref="evtOrganisationNotificationQueue"/>
		<property name="internalProcessor" ref="evtOrganisationProcessorInternal"/>
	</bean>

	<bean id="evtOrganisationProcessorInternal" class="ch.vd.unireg.evenement.organisation.engine.processor.EvenementOrganisationProcessorInternal">
		<property name="transactionManager" ref="transactionManager"/>
		<property name="evtOrganisationDAO" ref="evenementOrganisationDAO"/>
		<property name="translator" ref="evenementOrganisationTranslator"/>
		<property name="tiersService" ref="tiersService"/>
		<property name="indexer" ref="globalTiersIndexer"/>
		<property name="dataEventService" ref="dataEventService"/>
	</bean>

	<bean id="evtOrganisationProcessorRetry" class="ch.vd.unireg.evenement.organisation.engine.EvenementOrganisationRetryProcessorImpl">
		<property name="notificationQueue" ref="evtOrganisationNotificationQueue"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="evtOrganisationDAO" ref="evenementOrganisationDAO"/>
		<property name="processor" ref="evtOrganisationProcessor"/>
	</bean>

</beans>
