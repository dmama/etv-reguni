<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">


	<!-- Adapteur RCEnt -->

	<bean id="organisationHistorizer" class="ch.vd.unireg.interfaces.organisation.rcent.adapter.historizer.OrganisationHistorizer"/>

	<bean id="rcEntAdapter" class="ch.vd.unireg.interfaces.organisation.rcent.adapter.service.RCEntAdapter">
		<constructor-arg ref="rcEntClient"/>
		<constructor-arg ref="organisationHistorizer"/>
	</bean>

	<!-- Service Organisation -->
	<bean id="serviceOrganisationRCEnt" class="ch.vd.unireg.interfaces.organisation.rcent.ServiceOrganisationRCEnt">
		<constructor-arg ref="rcEntAdapter"/>
		<constructor-arg ref="rcEntClient"/>
		<constructor-arg ref="serviceInfrastructureRaw"/>
	</bean>

	<bean id="serviceOrganisationTracing" class="ch.vd.unireg.interfaces.organisation.ServiceOrganisationTracing">
		<property name="target" ref="serviceOrganisationRCEnt" />
		<property name="statsService" ref="statsService" />
	</bean>

	<bean id="serviceCivilOrganisationCache" class="ch.vd.unireg.interfaces.organisation.cache.ServiceOrganisationPersistentCache">
		<property name="target" ref="serviceOrganisationTracing" />
		<property name="cache" ref="organisationBerkeleyCache" />
		<property name="etablissementCache" ref="etablissementCivilPersistentCache" />
		<property name="uniregCacheManager" ref="uniregCacheManager" />
		<property name="statsService" ref="statsService" />
		<property name="dataEventService" ref="dataEventService" />
	</bean>

	<bean id="serviceOrganisationEndPoint" class="ch.vd.unireg.interfaces.organisation.ServiceOrganisationEndPoint">
		<property name="target" ref="serviceCivilOrganisationCache" />
	</bean>

	<alias alias="serviceOrganisationRaw" name="serviceOrganisationEndPoint"/>

</beans>
